<div id="div-FlexiTankStatus">
    <!-- Region Options & Template  -->
    <div id="div-Data">
        <div id="div-Options">
            <div id="div-Action" class="radius-top-left-right">
            </div>
        </div>
        <section class="panel panel-default">
            <header class="panel-heading">
                <div id="hExportedTable" class="hide"></div>
                <h3 class="m-b-none">@Forwarding.MvcApp.App_Resources.App_Resources.FilterBy</h3>
                @*<h3 class="m-b-none">Best Print Using Internet Explorer</h3>*@
            </header>
            <!--Region the searh, delete, addnew-->
            <div class="row text-sm wrapper hidden-print">
                <div id="div-main-options">
               
                    <div class="form-group col-sm-2">
                        <label>Operation Number</label>
                        <input type="text" id="txtOperationNumber" autocomplete="off" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" class="form-control parsley-validated input-sm" data-required="false" maxlength="50" placeholder="" style="text-transform:uppercase">
                    </div>
                    <div class="form-group col-sm-2">
                        <label>Gurantee Letter Number</label>
                        <input type="text" id="txtGuranteeLetterNumber" autocomplete="off" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" class="form-control parsley-validated input-sm" data-required="false" maxlength="50" placeholder="" style="text-transform:uppercase">
                    </div>
                    <div class="form-group col-sm-2">
                        <label>Flexi Number</label>
                        <input type="text" id="txtFlexiNumber" autocomplete="off" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" class="form-control parsley-validated input-sm" data-required="false" maxlength="50" placeholder="" style="text-transform:uppercase">
                    </div>
                    @*<div class="form-group col-sm-2">
                        <label>Network</label>
                        <select id="slNetwork" onfocus="DisableBackspaceKey(id);" onkeydown="DisableBackspaceKey(id);" onkeypress="DisableBackspaceKey(id);" class="form-control input-sm"></select>
                    </div>*@
                    <div class="form-group col-sm-2" style="">
                        <label>From Letter Date</label>
                        <input id="txtGuranteeLetterFromDate" readonly="readonly" type="text" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" style="background-color:white; cursor:text;" class="input-sm datepicker-input form-control" data-date-format="dd/mm/yyyy" placeholder="Select Date" />
                    </div>
                    <div class="form-group col-sm-2">
                        <label>To Letter Date</label>
                        <input id="txtGuranteeLetterToDate" readonly="readonly" type="text" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" style="background-color:white; cursor:text;" class="input-sm datepicker-input form-control" data-date-format="dd/mm/yyyy" placeholder="Select Date" />
                    </div>
                    
                    @*<div class="col-sm-2 m-t-27 hide">
                        <label> <input type="checkbox" id="cbOperationsWOInvoices" onchange="FlexiTankStatus_cbIsWorkFlowChanged();" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);">&nbsp; Oper. w/o Inv. </label>
                        <br><label> <input type="checkbox" id="cbIsWorkFlow" onchange="FlexiTankStatus_cbIsWorkFlowChanged();" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);">&nbsp; Work Flow </label>
                    </div>*@
                    <div class="col-sm-6 m-t">
                        <button id="btn-print" type="button" class="btn btn-lightblue btn-sm" onclick="FlexiTankStatus_Print('Print');"><i class="fa fa-print"></i><b>&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.Print</b></button>
                        <button id="btn-ExportToExcel" type="button" onclick="FlexiTankStatus_Print('Excel');" class="btn btn-sm btn-primary"><i class="fa fa-table"></i><b>&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.TraExportExcel&nbsp;</b></button>                
                        <button id="btn-SelectOperations" type="button" class="btn btn-info btn-sm hide" onclick="FlexiTankStatus_SelectOperations();"><i class="fa fa-check-square-o"></i><b>&nbsp;Select Operations</b></button>
                        <button id="btn-SelectColumns" type="button" class="btn btn-warning btn-sm hide" onclick="FlexiTankStatus_SelectColumns();"><i class="fa fa-print"></i><b>&nbsp;Add / Remove Columns</b></button>
                    </div>
                    <!--EOF Region Filter-->
                </div>
            </div>
            <!--EOF Region the searh, delete, addnew line-->
            
            
        </section>
    </div>
</div>
