<!-- start breadcrumb  -->
<ul id="ul-breadcrumb" class="breadcrumb no-border no-radius b-b b-light pull-in">
    <li>
        <a id="hl-homepage" href="javascript:void(0);">
            <i class="fa fa-home icon-home"></i><span>@Shipping.MvcApp.App_Resources.App_Resources.HomePage</span>
        </a>
    </li>
    <li>
        <a id="PS" href="javascript:void(0);" onclick="LoadViews('Purchasing')">
            @Shipping.MvcApp.App_Resources.App_Resources.Purchasing
        </a>
    </li>
    <li>
        <a id="PS_Reports" href="javascript:void(0);" onclick="LoadViews('PS_Reports')">
            @Shipping.MvcApp.App_Resources.App_Resources.PS_Reports
        </a>
    </li>
    <li class="active">@Shipping.MvcApp.App_Resources.App_Resources.PS_SupplierAgingReport</li>
</ul>

<div id="div-TrialBalance">
    <div id="div-Data">
        <div id="div-Options">
            <div id="div-Action" class="radius-top-left-right">
            </div>
        </div>
        <section class="panel panel-default">
            <header class="panel-heading">
                <h3 class="m-b-none">
                    @Shipping.MvcApp.App_Resources.App_Resources.PS_SupplierAgingReport
                </h3>
            </header>
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group col-sm-2">
                        <label>Supplier Group</label>
                        <select id="slAccountsGroup" class="form-control m-b input-sm" onfocus="DisableBackspaceKey(id);" onkeydown="DisableBackspaceKey(id);" onkeypress="DisableBackspaceKey(id);" onchange="Details_FillCheckboxList();" data-required="false"></select>
                    </div>
                    <div class="form-group col-sm-2">
                        <label>@Shipping.MvcApp.App_Resources.App_Resources.To</label>
                        <input id="txtToDate" readonly="readonly" type="text" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" style="background-color:white; cursor:text;" class="input-sm datepicker-input form-control" data-date-format="dd/mm/yyyy" placeholder="Select Date" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group col-sm-6">
                        <input type="radio" name="nameReportDebitCredit" id="cbIsDebit" checked="checked" onchange="" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);"><b>&nbsp;Debit&nbsp;</b>

                        &nbsp;<input type="radio" name="nameReportDebitCredit" id="cbIsCredit" onchange="" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);"><b>&nbsp;Credit&nbsp;</b>

                        &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;&nbsp;<input type="checkbox" name="nameReportByPeriod" id="cbIsByPeriod" checked="checked" onchange="" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);"><b>&nbsp;By Period&nbsp;</b>

                        &nbsp;&nbsp; <input type="checkbox" name="nameReportByJobNo" id="cbIsPostTransaction" onchange="" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);"><b>&nbsp;Un Posted Transactions&nbsp;</b>
                        <button id="btn-Print" type="button" onclick="ClientAging_Print('Print');" class="btn btn-sm btn-info"><i class="fa fa-print"></i><b>&nbsp;@Shipping.MvcApp.App_Resources.App_Resources.Print&nbsp;</b></button>

                     </div>
                   
                </div>

            </div>
            <div class="row text-sm wrapper hidden-print m-t-n-sm">

                <section id="secAccount" class="m-t-sm m-l col-sm-5 panel panel-default" style="clear:both;">
                    <div class="">
                        <label class=""><input type="checkbox" id="cbCheckAllAccounts" onchange="TrialBalance_cbCheckAllAccountsChanged();" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);"><u>&nbsp;Select All Suppliers</u></label><br />
                    </div>
                    <div id="divCbAccount" style="width:104%; height:370px; font-size:100%; overflow:scroll;">
                    </div>
                </section>

                <div id="hExportedTable" class="hide"></div>
            </div>

            <footer class="panel-footer hide">
                <div class="row">
                    <div class="col-sm-4 hidden-xs">
                        <select id="select-page-size" class="input-sm form-control input-s-sm inline">
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                        </select>
                        <button id="btn-applypaging" class="btn btn-sm btn-default" type="button">
                            @Shipping.MvcApp.App_Resources.App_Resources.Apply
                        </button>
                    </div>
                    <div id="div-Text-Total" class="col-sm-4 text-center">
                        <small class="text-muted inLine m-t-sm m-b-sm">
                            @Shipping.MvcApp.App_Resources.App_Resources.Showing
                            <span id="spn-first-page-row"></span>- <span id="spn-last-page-row"></span> @Shipping.MvcApp.App_Resources.App_Resources.Of
                            <span id="spn-total-count"></span> @Shipping.MvcApp.App_Resources.App_Resources.Items
                        </small>
                    </div>
                    <div id="div-Pager" class="col-sm-4 text-right text-center-xs float-right"></div>
                </div>
            </footer>
        </section>
    </div>
</div>
