<!-- This modal is opened when rebuilding Consolidation Operation for more than one container -->
<div class="modal fade" id="RebuildConsolidationModal" tabindex="-1" style="z-index: 4000;" data-keyboard="false" data-backdrop="false" role="dialog" aria-labelledby="RebuildConsolidationModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modalwidth-60">
        <div class="modal-content">
            <div class="modal-header">
                @*<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    &times;</button>*@
                <h3 class="m-b-none">@Forwarding.MvcApp.App_Resources.App_Resources.RebuildConsolidation &nbsp;<label id="lblRebuildConsolidationShown" purpose="dynamicLabel" class="static-text-primary"></label>
                    <button type="button" class="close" title="Close" data-dismiss="modal" onclick="RebuildConsolidation_ResetFunctionsNames();" aria-hidden="true">&times;</button>
                </h3>
            </div>
            <div class="modal-body">
                <!-- Region Add / Edit Country Form -->
                <div class="span7 form vertical-mode" id="RebuildConsolidation-form">
                    <fieldset>
                            <div id="bodyRebuildConsolidation">
                                <div class="col-sm-4 m-l-n">
                                    <input id="txtRebuildConsolidationSearch" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" style="text-transform:uppercase; border-color:#cccccc;"  type="text" class="input-sm form-control" maxlength="8" binding-name="SearchPlaceHolder" binding-prop="placeholder" placeholder="Search">
                                </div>
                                <button id="btn-RebuildConsolidationSearch" onclick="RebuildConsolidation_LoadWithPaging();" class="btn btn-sm btn-primary m-l-n" type="button"><i class="fa fa-search"></i></button>
                                
                                <div class="form-group float-right">
                                    <button id="btn-ApplyMapping" type="button" class="float-right btn btn-sm btn-lightblue" onclick="MapHouseToContainer_Update(2);"><i class="fa fa-indent"></i>&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.Apply</button>
                                </div>
                                <div class="form-group col-sm-4 float-right">
                                    <select id="slMappedContainersToAll" name="slMappedContainersToAll" onfocus="DisableBackspaceKey(id);" onkeydown="DisableBackspaceKey(id);" onkeypress="DisableBackspaceKey(id);" class="form-control m-l input-sm"></select>
                                </div>

                                <br /> <br />
                                <section class="panel panel-default" style="overflow: scroll; width: auto; height: auto;">
                                    <!--Region: table header-->
                                    <div class="table-responsive">
                                        <table id="tblRebuildConsolidation" class="table table-striped b-t b-light text-sm  table-hover">
                                            <thead>
                                                <tr>
                                                    @*<th id="HeaderDeletetblMAWBStockSelectID">
                                                        <input id="cb-CheckAll-MAWBStockSelect" type="checkbox" />
                                                    </th>*@
                                                    <th id="HeaderMappedHouseID">
                                                    </th>
                                                    <th>@Forwarding.MvcApp.App_Resources.App_Resources.HouseOperation
                                                    </th>
                                                    <th>@Forwarding.MvcApp.App_Resources.App_Resources.Container
                                                    </th>
                                                    <th class="rounded-right hide"></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            </tbody>
                                        </table>
                                    </div>
                                    <!--Region: EOF table header-->
                                    <!--Region: table footer-->
                                    <footer class="panel-footer">

                                    </footer>
                                    <!--Region: EOF table footer-->
                                </section>
                                            
                                <div class="row">
                                    <input type="number" id="select-page-size" value="10" class="hide" />
                                    <div id="div-Text-Total" class="col-sm-4 text-center">
                                        <small class="text-muted inline m-t-sm m-b-sm"> @Forwarding.MvcApp.App_Resources.App_Resources.Showing 
                                            <span id="spn-first-page-row"></span>- <span id="spn-last-page-row"></span> @Forwarding.MvcApp.App_Resources.App_Resources.Of
                                            <span id="spn-total-count"></span> @Forwarding.MvcApp.App_Resources.App_Resources.Items
                                        </small>
                                    </div>
                                    <div id="div-Pager" class="col-sm-4 text-right text-center-xs "></div>
                                </div>
                    
                                @*<div id="divMAWBStockSelectSummary" class="form-group float-right m-r-lg"> <!--i need those Divs for not to start from a new line-->
                                    @Forwarding.MvcApp.App_Resources.App_Resources.NumberOfMAWBs &nbsp;<label id="lblTotalNumberOfMAWBs" purpose="dynamicLabel" class="static-text-blue"></label>
                                </div>*@
                            </div>
                        </fieldset>
                    </div>
                </div>
                <!-- Endregion Add / Edit Region Form -->
               <div class="modal-footer">
                    @*<button type="button" id="btnSave" class="btn btn-primary btn-sm" onclick="MAWBStockSelect_Insert(false);">
                        <span class="glyphicon glyphicon-save"></span>@Forwarding.MvcApp.App_Resources.App_Resources.Save</button>
                    <button type="button" id="btnSaveandNew" class="btn btn-primary btn-sm" onclick="MAWBStockSelect_Insert(true);">
                        <span class="glyphicon glyphicon-save"></span>@Forwarding.MvcApp.App_Resources.App_Resources.SaveAndNew</button>*@
                    <button class="btnClose btn btn-link btn-sm" id="btnClose" title="Close" onclick="RebuildConsolidation_ResetFunctionsNames();" data-dismiss="modal" aria-hidden="true" >@Forwarding.MvcApp.App_Resources.App_Resources.Close</button><!--sherif: i added an id and the onclick fn go set the timelocked in the DB to null-->
                </div> 
            </div>
        </div>
    </div>