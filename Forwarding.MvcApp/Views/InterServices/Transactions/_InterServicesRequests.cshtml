<!-- start breadcrumb  -->
<ul id="ul-breadcrumb" class="breadcrumb no-border no-radius b-b b-light pull-in">
    <li><a id="hl-homepage" href="javascript:void(0);"><i class="fa fa-home icon-home"></i><span>@Forwarding.MvcApp.App_Resources.App_Resources.HomePage</span>
    </a></li>
    <li><a id="InterServices" href="javascript:void(0);" onclick="LoadViews(id)">@Forwarding.MvcApp.App_Resources.App_Resources.InterServices
    </a></li>
    <li class="active">@Forwarding.MvcApp.App_Resources.App_Resources.InterServicesRequests</li>
</ul>
<!-- end breadcrumb  -->

<div id="div-InterServicesRequests">
    <!-- Add / Edit Region Modal -->
    <div class="modal fade" id="InterServicesRequestsModal" tabindex="-1" data-keyboard="true" data-backdrop="false" role="dialog" aria-labelledby="InterServicesRequestsModalLabel" aria-hidden="true">
        <div class="modal-dialog modalwidth-90">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="m-b-none">@Forwarding.MvcApp.App_Resources.App_Resources.InterServicesRequests &nbsp;<label id="lblShown" purpose="dynamicLabel" class="static-text-primary"></label>
                    </h3>
                </div>
                <!-- Region Add / Edit Region Form -->
                <div class="modal-body">
                    <div class="span7 form vertical-mode" id="InterServicesRequests-form">
                        <fieldset>
                            <div class="form-group pull-in  has-error clearfix">
                                <input id="hID" type="hidden" />
                                <!-- start alert message region -->
                                <div class="alert alert-danger div-error">
                                    @Forwarding.MvcApp.App_Resources.App_Resources.ErrorMessage
                                </div>
                                <!-- end alert message region -->

                                <!-- Region Add / Edit Region Form -->
                                <div class="form-group col-sm-6">
                                    <label>@Forwarding.MvcApp.App_Resources.App_Resources.ChargeType</label>
                                    <select id="slChargeTypeID" name="slChargeTypeID" onfocus="DisableBackspaceKey(id);" onkeydown="DisableBackspaceKey(id);" onkeypress="DisableBackspaceKey(id);" class="form-control m-b"></select>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label>@Forwarding.MvcApp.App_Resources.App_Resources.Operation</label>
                                    <select id="slOperationID" name="slOperationID" onfocus="DisableBackspaceKey(id);" onkeydown="DisableBackspaceKey(id);" onkeypress="DisableBackspaceKey(id);" class="form-control m-b"></select>
                                </div>
                               
                                <div class="form-group col-sm-6 Creator-Show">
                                    <label>@Forwarding.MvcApp.App_Resources.App_Resources.Department</label>
                                    <select id="slToDepartmentID" name="slToDepartmentID" onfocus="DisableBackspaceKey(id);" onkeydown="DisableBackspaceKey(id);" onkeypress="DisableBackspaceKey(id);" class="form-control m-b" onchange="GetList_Users(null, null);"></select>
                                </div>
                                <div class="form-group col-sm-6 Creator-Show">
                                    <label>@Forwarding.MvcApp.App_Resources.App_Resources.User</label>
                                    <select id="slToUserID" name="slToUserID" onfocus="DisableBackspaceKey(id);" onkeydown="DisableBackspaceKey(id);" onkeypress="DisableBackspaceKey(id);" class="form-control m-b"></select>
                                </div>
                                <div class="form-group col-sm-6 hide Receiver-Show">
                                    <label>@Forwarding.MvcApp.App_Resources.App_Resources.Department</label>
                                    <select id="slFromDepartmentID" name="slFromDepartmentID" onfocus="DisableBackspaceKey(id);" onkeydown="DisableBackspaceKey(id);" onkeypress="DisableBackspaceKey(id);" class="form-control m-b" data-required="false"></select>
                                </div>
                                <div class="form-group col-sm-6 hide Receiver-Show">
                                    <label>@Forwarding.MvcApp.App_Resources.App_Resources.User</label>
                                    <select id="slCreatorUserID" name="slCreatorUserID" onfocus="DisableBackspaceKey(id);" onkeydown="DisableBackspaceKey(id);" onkeypress="DisableBackspaceKey(id);" class="form-control m-b" data-required="false"></select>
                                </div>
                                <div class="form-group col-sm-6 hide Receiver-Show">
                                    <label>@Forwarding.MvcApp.App_Resources.App_Resources.Cost</label>
                                    <input id="txtCost" onfocus="DisableEnterKey(id);" onkeypress="CheckValueIsDecimal(id);" type="text" data-type="number" class="form-control parsley-validated" data-required="false" />
                                </div>
                                <div class="form-group col-sm-6">
                                    <label class="hide Receiver-Show">@Forwarding.MvcApp.App_Resources.App_Resources.SalePrice</label> <label class="Creator-Show">@Forwarding.MvcApp.App_Resources.App_Resources.Cost</label>
                                    <input id="txtSalePrice" onfocus="DisableEnterKey(id);" onkeypress="CheckValueIsDecimal(id);" type="text" data-type="number" class="form-control parsley-validated" data-required="false"/>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label>@Forwarding.MvcApp.App_Resources.App_Resources.Status</label>
                                    <select id="slStatusID" name="slStatusID" onfocus="DisableBackspaceKey(id);" onkeydown="DisableBackspaceKey(id);" onkeypress="DisableBackspaceKey(id);" class="form-control m-b"></select>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label>@Forwarding.MvcApp.App_Resources.App_Resources.Notes</label>
                                    <textarea id="txtNotes" class="form-control parsley-validated" data-required="false" maxlength="500" style="resize:none" rows="5"></textarea>
                                </div>
                             

                                <!-- Region Add / Edit Region Form -->
                            </div>
                        </fieldset>
                    </div>
                </div>
                <!-- Endregion Add / Edit Region Form -->
               <div class="modal-footer m-t-n">
                    <button type="button" id="btnSaveInterServicesRequest" class="btn btn-primary btn-sm" onclick="InterServicesRequests_Insert(false);">
                        <span class="glyphicon glyphicon-save"></span>@Forwarding.MvcApp.App_Resources.App_Resources.Save</button>
                    <button type="button" id="btnSaveandNewInterServicesRequest" class="btn btn-primary btn-sm" onclick="InterServicesRequests_Insert(true);">
                        <span class="glyphicon glyphicon-save"></span>@Forwarding.MvcApp.App_Resources.App_Resources.SaveAndNew</button>
                    <button class="btnClose btn btn-link btn-sm" id="btnCloseInterServicesRequest" onclick="InterServicesRequests_UnlockRecord();" data-dismiss="modal" aria-hidden="true" >@Forwarding.MvcApp.App_Resources.App_Resources.Close</button><!--sherif: i added an id and the onclick fn go set the timelocked in the DB to null-->
                </div> 
            </div>
        </div>
    </div>
    <!-- Region Options & Template  -->

    <div id="div-Data">
        <div id="div-Options">
            <div id="div-Action" class="radius-top-left-right">
            </div>
        </div>
        <section class="panel panel-default">
            <header class="panel-heading">
                <h3 class="m-b-none">@Forwarding.MvcApp.App_Resources.App_Resources.InterServicesRequests
                </h3>
            </header>
            <!--Region the searh, delete, addnew-->
            <div class="row text-sm wrapper hidden-print ">
                <div id="div-main-options" class="col-sm-5 m-b-xs">
                    @*<button id="btn-NewAdd" class="btn btn-warning btn-sm hide" data-toggle="modal" data-target="#InterServicesRequestsModal"><i class="fa fa-plus"></i>&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.New</button>*@
                     <div id="div-option-buttons" class="btn-group hide">
                        <button id="btn-Copy" type="button" class="btn btn-sm btn-default"><i class="fa fa-copy"></i>&nbsp;Copy </button>
                        <button id="btn-Print" type="button" class="btn btn-sm btn-default"><i class="fa fa-print"></i>&nbsp;Print </button>
                        <button id="btn-Send" type="button" class="btn btn-sm btn-default"><i class="fa fa-envelope-o"></i>&nbsp;Send </button>
                    </div>
                </div>
                <div id="div-search-option" class="col-sm-7">
                    <div id="div-search-controls" class="input-group col-sm-9">
                        <input id="txt-Search" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" style="text-transform:uppercase"  type="text" class="input-sm form-control" binding-name="SearchPlaceHolder" binding-prop="placeholder" placeholder="Search Department / User / Charge Type / HBL">
                        <span class="input-group-btn">
                            <button id="btn-search" class="btn btn-sm btn-primary" type="button" onclick="InterServicesRequests_LoadingWithPaging();"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                    @*<div class="float-right col-sm-1">
                        <button id="btn-Delete" type="button" class="float-right btn btn-sm btn-danger m-r-n hide"><i class="fa fa-trash-o"></i>&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.Delete</button>
                    </div>*@
                </div>
            </div>
            <!--Region the searh, delete, addnew-->

            <!--Region: table header-->
            <div class="table-responsive">
                <table id="tblInterServicesRequests" class="table table-striped b-t b-light text-sm  table-hover">
                    <thead>
                        <tr>
                            <th id="ID">
                                <input id="cb-CheckAll" type="checkbox" />
                            </th>
                            <th class="th-sortable" data-toggle="class">
                                @Forwarding.MvcApp.App_Resources.App_Resources.Department Receiver
                            </th>
                            <th>
                                @Forwarding.MvcApp.App_Resources.App_Resources.User Receiver
                            </th>
                            <th>
                                @Forwarding.MvcApp.App_Resources.App_Resources.Department Sender
                            </th>
                            <th>
                                @Forwarding.MvcApp.App_Resources.App_Resources.User Sender
                            </th>
                            <th>
                                @Forwarding.MvcApp.App_Resources.App_Resources.ChargeType
                            </th>
                            <th>
                                @Forwarding.MvcApp.App_Resources.App_Resources.HBL
                            </th>
                            <th>
                                @Forwarding.MvcApp.App_Resources.App_Resources.Cost
                            </th>
                            <th>
                                @Forwarding.MvcApp.App_Resources.App_Resources.SalePrice
                            </th>
                            <th>
                                @Forwarding.MvcApp.App_Resources.App_Resources.Status
                            </th>
                            <th class="rounded-right hide"></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
            <!--Region: table header-->

            <!--Region: footer-->
            <footer class="panel-footer">
                <div class="row">
                    <div class="col-sm-4 hidden-xs">
                        <select id="select-page-size" class="input-sm form-control input-s-sm inline">
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                        </select>
                        <button id="btn-applypaging" class="btn btn-sm btn-default" type="button">
                            @Forwarding.MvcApp.App_Resources.App_Resources.Apply
                        </button>
                    </div>
                    <div id="div-Text-Total" class="col-sm-4 text-center">
                        <small class="text-muted inline m-t-sm m-b-sm"> @Forwarding.MvcApp.App_Resources.App_Resources.Showing 
                            <span id="spn-first-page-row"></span>- <span id="spn-last-page-row"></span> @Forwarding.MvcApp.App_Resources.App_Resources.Of
                            <span id="spn-total-count"></span> @Forwarding.MvcApp.App_Resources.App_Resources.Items
                        </small>
                    </div>
                    <div id="div-Pager" class="col-sm-4 text-right text-center-xs float-right"></div>
                </div>
            </footer>
            <!--Region: footer-->
        </section>
    </div>
</div>
