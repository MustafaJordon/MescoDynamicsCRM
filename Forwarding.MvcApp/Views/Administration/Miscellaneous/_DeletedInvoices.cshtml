<!-- start breadcrumb  -->
<ul id="ul-breadcrumb" class="breadcrumb no-border no-radius b-b b-light pull-in">
    <li><a id="hl-homepage" href="javascript:void(0);"><i class="fa fa-home icon-home"></i><span>@Forwarding.MvcApp.App_Resources.App_Resources.HomePage</span>
    </a></li>
    <li><a id="Administration" href="javascript:void(0);" onclick="LoadViews('Miscellaneous')">@Forwarding.MvcApp.App_Resources.App_Resources.Administration
    </a></li>
    <li><a id="Miscellaneous" href="javascript:void(0);" onclick="LoadViews(id)">@Forwarding.MvcApp.App_Resources.App_Resources.Miscellaneous
    </a></li>
    <li class="active">@Forwarding.MvcApp.App_Resources.App_Resources.DeletedInvoices</li>
</ul>
<!-- end breadcrumb  -->

<div id="div-Data">
        <div id="div-Options">
            <div id="div-Action" class="radius-top-left-right">
            </div>
        </div>
        <section class="panel panel-default">
            <header class="panel-heading">
                <h3 class="m-b-none">@Forwarding.MvcApp.App_Resources.App_Resources.DeletedInvoices
                </h3>
            </header>
            <!--Region the searh, delete, addnew-->
            <div class="row text-sm wrapper">
                <div id="div-search-option" class="col-sm-7">
                    <div id="div-search-controls" class="input-group col-sm-9">
                        @*<input id="txt-Search" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" style="text-transform:uppercase"  type="text" class="input-sm form-control" binding-name="SearchPlaceHolder" binding-prop="placeholder" placeholder="Search by Invoice No. / Operation / Client">*@
                        <input id="txt-Search" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" style="text-transform:uppercase"  type="text" class="input-sm form-control" binding-name="SearchPlaceHolder" binding-prop="placeholder" placeholder="@Forwarding.MvcApp.App_Resources.App_Resources.SearchbyInvoiceNo">
                        <span class="input-group-btn">
                            <button id="btn-search" class="btn btn-sm btn-primary" type="button" onclick="DeletedInvoices_LoadWithPagingWithWhereClauseAndOrderBy();"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                    <div class="form-group input-group col-sm-3 swapChildrenClass hide">
                        <select id="slApprovalStatus" onchange="DeletedInvoices_LoadWithPagingWithWhereClauseAndOrderBy();" onfocus="DisableBackspaceKey(id);" onkeydown="DisableBackspaceKey(id);" onkeypress="DisableBackspaceKey(id);" class="form-control m-b input-sm" data-required="false">
                            <option value="">@Forwarding.MvcApp.App_Resources.App_Resources.AllStates</option>
                            <option value="1">@Forwarding.MvcApp.App_Resources.App_Resources.Approved</option>
                            <option value="0" selected>@Forwarding.MvcApp.App_Resources.App_Resources.UnApproved</option>
                        </select>
                        <span class="input-group-btn">
                            <button id="btn-filterByApprovalStatus" title="Filter" class="btn btn-sm btn-lightblue" type="button" onclick="DeletedInvoices_LoadWithPagingWithWhereClauseAndOrderBy();"><i class="fa fa-filter"></i></button>
                        </span>
                    </div>
                </div>
            </div>
            <!--Region the searh, delete, addnew-->

            <!--Region: table header-->
            <div class="table-responsive">
                <table id="tblDeletedInvoices" class="table table-striped b-t b-light text-sm  table-hover">
                    <thead>
                        <tr>
                            <th id="ID" class="hide">
                                <input id="cb-CheckAll" type="checkbox" />
                            </th>
                            <th>@Forwarding.MvcApp.App_Resources.App_Resources.InvoiceNumber
                            </th>
                            <th>@Forwarding.MvcApp.App_Resources.App_Resources.Operation
                            </th>
                            <th>@Forwarding.MvcApp.App_Resources.App_Resources.Partner
                            </th>
                            <th>@Forwarding.MvcApp.App_Resources.App_Resources.Amount
                            </th>
                            <th>@Forwarding.MvcApp.App_Resources.App_Resources.Currency
                            </th>
                            <th class="rounded-right"></th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
            <!--Region: table header-->

            <!--Region: footer-->
            <footer class="panel-footer">
                <div class="row">
                    <div class="col-sm-4 hidden-xs">
                        <select id="select-page-size" class="input-sm form-control input-s-sm inline">
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                        </select>
                        <button id="btn-applypaging" class="btn btn-sm btn-default" type="button">
                            @Forwarding.MvcApp.App_Resources.App_Resources.Apply
                        </button>
                    </div>
                    <div id="div-Text-Total" class="col-sm-4 text-center">
                        <small class="text-muted inline m-t-sm m-b-sm"> @Forwarding.MvcApp.App_Resources.App_Resources.Showing 
                            <span id="spn-first-page-row"></span>- <span id="spn-last-page-row"></span> @Forwarding.MvcApp.App_Resources.App_Resources.Of
                            <span id="spn-total-count"></span> @Forwarding.MvcApp.App_Resources.App_Resources.Items
                        </small>
                    </div>
                    <div id="div-Pager" class="col-sm-4 text-right text-center-xs float-right"></div>
                </div>
            </footer>
            <!--Region: footer-->
        </section>
    </div>

<!--TransferInvoiceModal-->
<div class="modal fade" id="TransferInvoiceModal" tabindex="-1" style="z-index:2000;" @*data-keyboard="false"*@ data-backdrop="false" role="dialog" aria-labelledby="TransferInvoiceModalLabel" aria-hidden="true">
    <div class="modal-dialog modalwidth-50">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="m-b-none">@Forwarding.MvcApp.App_Resources.App_Resources.Invoice &nbsp;<label id="lblDeletedInvoiceShown" purpose="dynamicLabel" class="static-text-primary"></label>
                    @*<button type="button" class="close" title="Close" data-dismiss="modal" onclick="MAWBStockSelect_ResetFunctionsNames();" aria-hidden="true">&times;</button>*@
                </h3>
            </div>
            <!-- Region Add / Edit Region Form -->
            <div class="modal-body">
                <div class="span7 form vertical-mode" id="TransferDeletedInvoice-form">
                    <fieldset>
                        <input id="hDeletedInvoiceID" type="hidden" />
                        <div class="form-group col-sm-6 m-t">
                            <label>Transfer to Operation (last 12 months)</label>
                            <select id="slOperation" class="form-control input-sm" onfocus="DisableBackspaceKey(id);" onkeydown="DisableBackspaceKey(id);" onkeypress="DisableBackspaceKey(id);" ></select>
                        </div>
                        <div class="form-group col-sm-6 m-t">
                            <label>@Forwarding.MvcApp.App_Resources.App_Resources.Currency</label>
                            <select id="slCurrency" class="form-control input-sm" onfocus="DisableBackspaceKey(id);" onkeydown="DisableBackspaceKey(id);" onkeypress="DisableBackspaceKey(id);" ></select>
                        </div>
                    </fieldset>
                </div>
            </div>
            <!-- Endregion Add / Edit Region Form -->
            <div class="modal-footer">
                <button type="button" id="btnTransfer" class="btn btn-primary btn-sm" onclick="DeletedInvoices_Transfer();">
                    <span class="glyphicon glyphicon-save"></span>@Forwarding.MvcApp.App_Resources.App_Resources.Transfer</button>
                @*<button type="button" id="btnSaveandNew" class="btn btn-primary btn-sm" onclick="MAWBStockSelect_Insert(true);">
                    <span class="glyphicon glyphicon-save"></span>@Forwarding.MvcApp.App_Resources.App_Resources.SaveAndNew</button>*@
                <button class="btnClose btn btn-link btn-sm" id="btnClose" title="Close" data-dismiss="modal" aria-hidden="true" >@Forwarding.MvcApp.App_Resources.App_Resources.Close</button><!--sherif: i added an id and the onclick fn go set the timelocked in the DB to null-->
            </div> 
        </div>
    </div>
</div>
<!--EOF TransferInvoiceModal-->
