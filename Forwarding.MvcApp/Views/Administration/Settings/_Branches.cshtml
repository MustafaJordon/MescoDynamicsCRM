<div id="div-Branches">
    <!-- Add / Edit Region Modal -->
    <div class="modal fade" id="BranchModal" tabindex="-1" data-keyboard="false" data-backdrop="false" role="dialog" aria-labelledby="BranchModalLabel" aria-hidden="true">
        <div class="modal-dialog modalwidth-70">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="m-b-none">
                        @Forwarding.MvcApp.App_Resources.App_Resources.Branch &nbsp;<label id="lblShown" purpose="dynamicLabel" class="static-text-primary"></label>
                </h3>
            </div>
            <!-- Region Add / Edit Region Form -->
            <div class="modal-body">
                <div class="span7 form vertical-mode" id="Branch-form">
                    <fieldset>
                        <div class="form-group pull-in  has-error clearfix swapChildrenClass">
                            <input id="hID" type="hidden" />
                            <input id="hFA_LastDepreciationDate" type="hidden" />
                            <!-- start alert message region -->
                            <div class="alert alert-danger div-error">
                                @Forwarding.MvcApp.App_Resources.App_Resources.ErrorMessage
                            </div>
                            <!-- end alert message region -->
                            <!-- Region Add / Edit Region Form -->
                            <div class="form-group col-sm-4">
                                <label>@Forwarding.MvcApp.App_Resources.App_Resources.Code</label>
                                <input id="txtCode" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" type="text" class="form-control parsley-validated" data-required="true" data-minlength="2" maxlength="10" placeholder="" style="text-transform:uppercase" />
                            </div>
                            <div class="form-group col-sm-4">
                                <label>@Forwarding.MvcApp.App_Resources.App_Resources.Name</label>
                                <input type="text" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" id="txtName" class="form-control parsley-validated" data-required="true" maxlength="50" placeholder="" style="text-transform:uppercase" />
                            </div>

                            <div class="form-group col-sm-4">
                                <label>@Forwarding.MvcApp.App_Resources.App_Resources.LocalName</label>
                                <input type="text" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" id="txtLocalName" class="form-control parsley-validated" data-required="true" maxlength="50" placeholder="" style="text-transform:uppercase" />
                            </div>
                            <div class="form-group col-sm-6">
                                <label>@Forwarding.MvcApp.App_Resources.App_Resources.Country</label>
                                <select id="slCountries" name="slCountries" class="form-control m-b" onchange="Cities_GetList();" onfocus="DisableBackspaceKey(id);" onkeydown="DisableBackspaceKey(id);" onkeypress="DisableBackspaceKey(id);"></select>
                            </div>
                            <div class="form-group col-sm-6">
                                <label>@Forwarding.MvcApp.App_Resources.App_Resources.City</label>
                                <select id="slCities" name="slCities" onfocus="DisableBackspaceKey(id);" onkeydown="DisableBackspaceKey(id);" onkeypress="DisableBackspaceKey(id);" class="form-control m-b"></select>
                            </div>
                            <div class="form-group col-sm-3">
                                <label>@Forwarding.MvcApp.App_Resources.App_Resources.Phone1</label>
                                <input id="txtPhone1" onkeypress="CheckValueIsInteger(id);" onfocus="CheckValueIsInteger(id);" type="text" class="form-control parsley-validated" data-required="false" maxlength="16" placeholder="" style="text-transform:uppercase" />
                            </div>
                            <div class="form-group col-sm-3">
                                <label>@Forwarding.MvcApp.App_Resources.App_Resources.Phone2</label>
                                <input id="txtPhone2" onkeypress="CheckValueIsInteger(id);" onfocus="CheckValueIsInteger(id);" type="text" class="form-control parsley-validated" data-required="false" maxlength="16" placeholder="" style="text-transform:uppercase" />
                            </div>
                            <div class="form-group col-sm-3">
                                <label>@Forwarding.MvcApp.App_Resources.App_Resources.Mobile1</label>
                                <input id="txtMobile1" onkeypress="CheckValueIsInteger(id);" onfocus="CheckValueIsInteger(id);" type="text" class="form-control parsley-validated" data-required="false" maxlength="16" placeholder="" style="text-transform:uppercase" />
                            </div>
                            <div class="form-group col-sm-3">
                                <label>@Forwarding.MvcApp.App_Resources.App_Resources.Fax</label>
                                <input id="txtFax" onkeypress="CheckValueIsInteger(id);" onfocus="CheckValueIsInteger(id);" type="text" class="form-control parsley-validated" data-required="false" maxlength="16" placeholder="" style="text-transform:uppercase" />
                            </div>
                            <div class="form-group col-sm-9">
                                <label>@Forwarding.MvcApp.App_Resources.App_Resources.Address</label>
                                <input id="txtAddress" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" type="text" class="form-control parsley-validated" data-required="false" maxlength="200" placeholder="" style="text-transform:uppercase" />
                            </div>
                            <div class="form-group col-sm-3">
                                <label>@Forwarding.MvcApp.App_Resources.App_Resources.ZipCode</label>
                                <input id="txtZipCode" onkeypress="CheckValueIsInteger(id);" onfocus="CheckValueIsInteger(id);" type="text" class="form-control parsley-validated" data-required="false" maxlength="16" placeholder="" style="text-transform:uppercase" />
                            </div>
                            <div class="form-group col-sm-6">
                                <label>@Forwarding.MvcApp.App_Resources.App_Resources.Notes</label>
                                <input type="text" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" id="txtNotes" class="form-control parsley-validated" data-required="false" maxlength="50" placeholder="" style="text-transform:uppercase" />
                            </div>
                            <div class="col-sm-3 m-t-lg">
                                <label><input type="checkbox" id="cbIsInactive" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);">&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.IsInactive</label><br />
                            </div>
                            <div class="col-sm-3 m-t-lg">
                                <label><input type="checkbox" id="cbIsDepartement" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);">&nbsp;Is Departement</label><br />
                            </div>
                            <!-- Region Add / Edit Region Form -->
                        </div>
                    </fieldset>
                </div>
            </div>
            <!-- Endregion Add / Edit Region Form -->
            <div class="modal-footer">
                <a id="btnSave" class="btn btn-primary btn-sm" onclick="Branches_Insert(false);">
                    <span class="glyphicon glyphicon-save"></span>@Forwarding.MvcApp.App_Resources.App_Resources.Save
                </a>
                <a id="btnSaveandNew" class="btn btn-primary btn-sm" onclick="Branches_Insert(true);">
                    <span class="glyphicon glyphicon-save"></span>@Forwarding.MvcApp.App_Resources.App_Resources.SaveAndNew
                </a>
                <button class="btnClose btn btn-link btn-sm" id="btnClose" data-dismiss="modal" aria-hidden="true">@Forwarding.MvcApp.App_Resources.App_Resources.Close</button><!--sherif: i added an id and the onclick fn go set the timelocked in the DB to null-->
            </div>
        </div>
    </div>
</div>
<!-- Region Options & Template  -->

