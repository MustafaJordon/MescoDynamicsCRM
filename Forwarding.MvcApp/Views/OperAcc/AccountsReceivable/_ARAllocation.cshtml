<div id="div-Partner">
    <!-- Region Options & Template  -->
    <div id="div-Data">
        <div id="div-Options">
            <div id="div-Action" class="radius-top-left-right">
            </div>
        </div>
        <section class="panel panel-default">
            <header class="panel-heading">
                <h3 id="h3Allocation" class="m-b-none">@*@Forwarding.MvcApp.App_Resources.App_Resources.ReceivablesAllocations*@</h3>
            </header>
            <!--Region the searh, delete, addnew-->
            <div class="row text-sm wrapper hidden-print ">
                <div id="div-main-options" class="col-sm-2 m-b-xs">
                    <button id="btn-NewAdd-Remove" class="btn btn-warning btn-sm swapChildrenClass hide" data-toggle="modal" data-target="#PartnerModal"><i class="fa fa-plus"></i><b>&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.New&nbsp;</b></button>
                    <div id="div-option-buttons" class="btn-group hide">
                        <button id="btn-Copy" type="button" class="btn btn-sm btn-default"><i class="fa fa-copy"></i>&nbsp;Copy </button>
                        <button id="btn-Print" type="button" class="btn btn-sm btn-default"><i class="fa fa-print"></i>&nbsp;Print </button>
                        <button id="btn-Send" type="button" class="btn btn-sm btn-default"><i class="fa fa-envelope-o"></i>&nbsp;Send </button>
                    </div>
                </div>    
                <div id="div-search-option" class="col-sm-10 swapChildrenClass">
                    
                    <div class="form-group input-group col-sm-3 swapChildrenClass">
                        <select id="slPartnerType" @*onchange="ARAllocation_PartnerTypeChanged();"*@ onfocus="DisableBackspaceKey(id);" onkeydown="DisableBackspaceKey(id);" onkeypress="DisableBackspaceKey(id);" class="form-control m-b input-sm" data-required="false"></select>
                        <span class="input-group-btn">
                            <button id="btn-filterPartnerType" title="Filter" class="btn btn-sm btn-lightblue" type="button" onclick="ARAllocation_PartnerTypeChanged();"><i class="fa fa-filter"></i></button>
                        </span>
                    </div>
                    
                    <div class="form-group input-group col-sm-4 swapChildrenClass">
                        <select id="slPartner" onfocus="DisableBackspaceKey(id);" onkeydown="DisableBackspaceKey(id);" onkeypress="DisableBackspaceKey(id);" class="form-control m-b input-sm" data-required="false"></select>
                        <span class="input-group-btn">
                            <button id="btn-filterPartner" title="Filter" class="btn btn-sm btn-lightblue" type="button" onclick="ARAllocation_Partners_LoadingWithPaging();"><i class="fa fa-filter"></i></button>
                        </span>
                    </div>
                    
                    <div id="div-search-controls" class="input-group col-sm-4">
                        <input id="txt-Search" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" style="text-transform:uppercase"  type="text" class="input-sm form-control" binding-name="SearchPlaceHolder" binding-prop="placeholder" placeholder="">
                        <span class="input-group-btn">
                            <button id="btn-search" title="Search" class="btn btn-sm btn-primary" type="button" onclick="ARAllocation_Partners_LoadingWithPaging();"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                    <div class="float-right col-sm-2 hide">
                        <button id="btn-Delete-Remove" type="button" class="float-right btn btn-sm btn-danger m-r-n swapChildrenClass hide"><i class="fa fa-trash-o"></i><b>&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.Delete&nbsp;</b></button>
                    </div>
                </div>
            </div>
            <!--EOF Region the searh, delete, addnew line-->
            
            <!--Region: table header-->
            <div class="table-responsive m-t-n-sm">
                <table id="tblPartner" class="table table-striped b-t b-light text-sm  table-hover">
                    <thead>
                        <tr>
                            <th id="HeaderDeletePartnerID" class="">
                                <input id="cbPartnerDeleteHeader" type="checkbox" />
                            </th>
                            <th>@Forwarding.MvcApp.App_Resources.App_Resources.PartnerType
                            </th>
                            <th>@Forwarding.MvcApp.App_Resources.App_Resources.PartnerName
                            </th>
                            <th>UnAllocated Amount
                            </th>
                            
                            <th class="rounded-right hide"></th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
            <!--Region: table header-->

            <!--Region: footer-->
            <footer class="panel-footer">
                <div class="row">
                    <div class="col-sm-4 hidden-xs">
                        <select id="select-page-size" class="input-sm form-control input-s-sm inline">
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                        </select>
                        <button id="btn-applypaging" class="btn btn-sm btn-default" type="button">
                            @Forwarding.MvcApp.App_Resources.App_Resources.Apply
                        </button>
                    </div>
                    <div id="div-Text-Total" class="col-sm-4 text-center">
                        <small class="text-muted inline m-t-sm m-b-sm"> @Forwarding.MvcApp.App_Resources.App_Resources.Showing 
                            <span id="spn-first-page-row"></span>- <span id="spn-last-page-row"></span> @Forwarding.MvcApp.App_Resources.App_Resources.Of
                            <span id="spn-total-count"></span> @Forwarding.MvcApp.App_Resources.App_Resources.Items
                        </small>
                    </div>
                    <div id="div-Pager" class="col-sm-4 text-right text-center-xs float-right"></div>
                </div>
            </footer>
            <!--Region: footer-->
        </section>
    </div>
</div>
<!--Allocation Modal-->
<div class="modal fade" id="AllocationModal" tabindex="-1" style="z-index:1050;" data-keyboard="true" data-backdrop="false" role="dialog" aria-labelledby="AllocationModalLabel" aria-hidden="true">
    <div class="modal-dialog modalwidth-100">
        <div class="modal-content m-t-n-lg">
            <div class="modal-header">
                <h3 id="h3ModalLblAllocationType" class="m-b-none">@*@Forwarding.MvcApp.App_Resources.App_Resources.Allocation*@ &nbsp;<label id="lblAllocationShown" purpose="dynamicLabel" class="static-text-primary"></label>
                </h3>
            </div>
            <!-- Region Add / Edit Region Form -->
            <div class="modal-body">
                <div class="span7 form vertical-mode" id="Allocation-form">
                    <fieldset>
                        <div class="form-group  has-error clearfix">
                            <input id="hAllocationPartnerID" type="hidden" />
                            <input id="hAllocationPartnerTypeID" type="hidden" />
                            <!-- start alert message region -->
                            @*<div class="alert alert-danger div-error">
                                @Forwarding.MvcApp.App_Resources.App_Resources.ErrorMessage
                            </div>*@
                            <!-- end alert message region -->

                                    <div id="divAllocationHeader" class="row">
                                        <div class="form-group col-sm-4 m-t-n-sm">
                                            <label>@Forwarding.MvcApp.App_Resources.App_Resources.PartnerName</label>
                                            <input type="text" id="txtAllocationPartnerName" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" class="form-control parsley-validated input-sm" data-required="false" data-minlength="1" maxlength="150" placeholder="PartnerName" disabled="disabled" style="text-transform:uppercase" />
                                        </div>
                                        <div class="form-group col-sm-2 m-t-n-sm">
                                            <label>@Forwarding.MvcApp.App_Resources.App_Resources.Date</label>
                                            <input id="txtAllocationDate" disabled="disabled" type="text" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" readonly="readonly" style="cursor:text;" class="datepicker-input form-control input-sm" data-required="false" data-date-format="dd/mm/yyyy" placeholder="Select Date" />
                                        </div>
                                        <div class="form-group col-sm-4 m-t-n-sm">
                                            @*<label>@Forwarding.MvcApp.App_Resources.App_Resources.OpenAmount</label>*@
                                            <label>Available Amounts</label>
                                            <input type="text" id="txtAllocationAvailableBalance" disabled="disabled" onkeypress="CheckValueIsDecimal(id);" onfocus="CheckValueIsDecimal(id);" onblur="CheckDecimalFormat(id);"  class="form-control parsley-validated input-sm text-primary" data-required="true" maxlength="10" placeholder="0.0" />
                                        </div>
                                        @*<div class="form-group col-sm-2 m-t-n-sm hide">
                                            <label>@Forwarding.MvcApp.App_Resources.App_Resources.AmountDue</label>
                                            <input type="text" id="txtAllocationAmountDue" disabled="disabled" onkeypress="CheckValueIsDecimal(id);" onfocus="CheckValueIsDecimal(id);" onblur="CheckDecimalFormat(id);"  class="form-control parsley-validated input-sm text-primary" data-required="true" maxlength="10" placeholder="0.0" />
                                        </div>
                                        <div class="form-group col-sm-2 m-t-n-sm hide">
                                            <label>@Forwarding.MvcApp.App_Resources.App_Resources.Remaining</label>
                                            <input type="text" id="txtAllocationRemainingBalance" disabled="disabled" onkeypress="CheckValueIsDecimal(id);" onfocus="CheckValueIsDecimal(id);" onblur="CheckDecimalFormat(id);"  class="form-control parsley-validated input-sm text-primary" data-required="true" maxlength="10" placeholder="0.0" />
                                        </div>*@
                                        <div id="divPartnerBalance" class="col-sm-5">
                                            <section class="panel panel-default">
                                                <header class="panel-heading font-bold text-ul">Available Amounts</header>
                                                <!--Region: table header-->
                                                <div class="table-responsive" style="width:100%; height:130px; overflow:scroll;">
                                                    <table id="tblPartnerBalance" class="table table-striped b-t b-light text-sm  table-hover">
                                                        <thead>
                                                            <tr>
                                                                <th id="HeaderDeletePartnerBalanceID" class="hide">
                                                                    <input id="cbPartnerBalanceDeleteHeader" type="checkbox" />
                                                                </th>
                                                                <th>@Forwarding.MvcApp.App_Resources.App_Resources.Amount</th>
                                                                <th>@Forwarding.MvcApp.App_Resources.App_Resources.Currency</th>
                                                                <th>@Forwarding.MvcApp.App_Resources.App_Resources.AmountDue</th>
                                                                <th>@Forwarding.MvcApp.App_Resources.App_Resources.Remaining</th>
                                                                <th class="rounded-right hide"></th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                        </tbody>
                                                    </table>
                                                </div>
                                                <!--Region: EOF table header-->
                                                <!--Region: table footer-->
                                                <footer class="panel-footer">
                                                    <span id="spanNoPartnerBalance" class="hide">No Balance for this partner.</span>
                                                </footer>
                                                <!--Region: EOF table footer-->
                                            </section>
                                        </div>

                                    </div>

                            
                                    <div class="m-t-n-sm" >
                                        <section class="panel panel-default" style="clear:both;">
                                            <header class="panel-heading font-bold text-ul">
                                                @Forwarding.MvcApp.App_Resources.App_Resources.Items
                                                <div class="input-group col-sm-4 m-t-n-xs float-right">
                                                    <input id="txtSearchAllocationItems" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" style="text-transform:uppercase"  type="text" class="input-sm form-control" binding-name="SearchPlaceHolder" binding-prop="placeholder" placeholder="Search">
                                                    <span class="input-group-btn">
                                                        <button id="btn-searchAllocationItems" title="Search" class="btn btn-sm btn-warning" type="button"><i class="fa fa-search"></i></button>
                                                    </span>
                                                </div>
                                            </header>
                                            <!--Region: table header-->
                                            <div class="table-responsive" style="width:100%; height:220px; overflow:scroll;">
                                                <table id="tblAllocationItem" class="table table-striped b-t b-light text-sm  table-hover">
                                                </table>
                                            </div>
                                            <!--Region: EOF table header-->
                                            <!--Region: table footer-->
                                            <footer class="panel-footer">
                                                <span id="spanNoAllocationItem" class="hide">No unpaid Allocation Items for this partner.</span>
                                            </footer>
                                            <!--Region: EOF table footer-->
                                        </section>

                                    </div>


                        </div>
                    </fieldset>
                </div>
            </div>
            <!-- Endregion Add / Edit Region Form -->
            <div class="modal-footer m-t-n-lg">
                <button type="button" id="btnSaveAllocation" class="btn btn-primary btn-sm" onclick="ARAllocation_Save(false);">
                    <span class="glyphicon glyphicon-save"></span> @Forwarding.MvcApp.App_Resources.App_Resources.Save </button>
                <button type="button" id="btnSaveAllocationAndPrint" class="btn btn-info btn-sm hide" onclick="ARAllocation_Save(true);">
                    <span class="glyphicon glyphicon-print"></span> @Forwarding.MvcApp.App_Resources.App_Resources.SaveAndPrint </button>
                <button class="btn btn-link btn-sm" data-dismiss="modal" aria-hidden="true">@Forwarding.MvcApp.App_Resources.App_Resources.Close</button><!--sherif: i added an id and the onclick fn go set the timelocked in the DB to null-->
            </div> 
        </div>
    </div>
</div>
<!--EOF Allocation Modal-->