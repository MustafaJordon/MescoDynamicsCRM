<div id="div-ProfitStatistics">
    <!-- Region Options & Template  -->
    <div id="div-Data">
        <div id="div-Options">
            <div id="div-Action" class="radius-top-left-right">
            </div>
        </div>
        <section class="panel panel-default">
            <header class="panel-heading">
                <div id="hExportedTable" class="hide"></div>
                <h3 class="m-b-none">@Forwarding.MvcApp.App_Resources.App_Resources.FilterBy</h3>
                @*<h3 class="m-b-none">Best Print Using Internet Explorer</h3>*@
            </header>
            <!--Region the searh, delete, addnew-->
            <div class="row text-sm wrapper hidden-print m-t-n-sm">
                <div class="swapChildrenClass">
                    @*<div id="div-main-options">*@

                    <div class="row">
                        <div class="form-group col-sm-3 HideForPeriod">
                            <label>@Forwarding.MvcApp.App_Resources.App_Resources.FiscalYears</label>
                            <select id="slFiscalYearID" onfocus="DisableBackspaceKey(id);" onkeydown="DisableBackspaceKey(id);" onkeypress="DisableBackspaceKey(id);" class="form-control input-sm"></select>
                        </div>
                        <div class="form-group col-sm-3 HideForPeriod">
                            <label>@Forwarding.MvcApp.App_Resources.App_Resources.Budgets</label>
                            <select id="slBudgetsID" onfocus="DisableBackspaceKey(id);" onkeydown="DisableBackspaceKey(id);" onkeypress="DisableBackspaceKey(id);" class="form-control input-sm"></select>
                        </div>

                        <div class="form-group col-sm-2 ">
                            <br>
                            <label class=""><input type="checkbox" id="cbShowSubAccount" onchange="" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);">&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.ShowSubAccounts&nbsp;</label><br />
                        </div>
                        <div class="form-group col-sm-2">
                            <br>
                            <label class=""><input type="checkbox" id="cbShowByPeriod" onchange="ChangePeriod();" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);">&nbsp;ByPeriod&nbsp;</label><br />
                        </div>
                        <div class="form-group col-sm-2">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-sm-2  ShowForPeriod hide">
                            <label>@Forwarding.MvcApp.App_Resources.App_Resources.From</label>
                            <input id="txtFromDate" readonly="readonly" type="text" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" style="background-color:white; cursor:text;" class="input-sm datepicker-input form-control" data-date-format="dd/mm/yyyy" placeholder="@Forwarding.MvcApp.App_Resources.App_Resources.Select" />
                        </div>
                        <div class="form-group col-sm-2 ShowForPeriod hide">
                            <label>@Forwarding.MvcApp.App_Resources.App_Resources.To</label>
                            <input id="txtToDate" readonly="readonly" type="text" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" style="background-color:white; cursor:text;" class="input-sm datepicker-input form-control" data-date-format="dd/mm/yyyy" placeholder="@Forwarding.MvcApp.App_Resources.App_Resources.Select" />
                        </div>


                    </div>
                    <div class="row">
                        <section id="secBudget" class="m-t-xs m-l col-sm-3 panel panel-default ShowForPeriod hide">
                            <div class="">
                                <label class="swapChildrenClass"><input type="checkbox" id="cbCheckAllBudgets" onchange="BudgetLedger_cbCheckAllBudgetsChanged();" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);"><u>&nbsp;SelectAllBudgets&nbsp;</u></label><br />
                            </div>
                            <div id="divCbBudget" class="swapCheckBoxesClass" style="width:107%; height:370px; font-size:100%; overflow:scroll;">
                            </div>
                        </section>
                    </div>
                    <div class="row">
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <button id="btn-print" type="button" class="btn btn-lightblue btn-sm m-t-md" onclick="BudgetDetailsReport_Print('Print');"><i class="fa fa-print"></i><b>&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.Print</b></button>
                            <button id="btn-ExportToExcel" type="button" onclick="BudgetDetailsReport_Print('Excel');" class="btn btn-sm btn-primary m-t-md"><i class="fa fa-table"></i><b>&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.TraExportExcel&nbsp;</b></button>
                        </div>
                        @*<div class="col-sm-3">
            </div>*@
                        <!--EOF Region Filter-->
                        @*</div>*@
                    </div>
            </div>

            <!--EOF Region the searh, delete, addnew line-->


        </section>
    </div>
</div>


