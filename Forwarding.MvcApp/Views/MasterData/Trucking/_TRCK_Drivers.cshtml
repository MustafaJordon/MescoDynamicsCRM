<!-- start breadcrumb  -->
<ul id="ul-breadcrumb" class="breadcrumb no-border no-radius b-b b-light pull-in">
    <li><a id="hl-homepage" href="javascript:void(0);"><i class="fa fa-home icon-home"></i><span>@Forwarding.MvcApp.App_Resources.App_Resources.HomePage</span>
    </a></li>
    <li><a id="MasterData" href="javascript:void(0);" onclick="LoadViews('Trucking')">@Forwarding.MvcApp.App_Resources.App_Resources.MasterData
    </a></li>
    <li><a id="Trucking" href="javascript:void(0);" onclick="LoadViews(id)">@Forwarding.MvcApp.App_Resources.App_Resources.Trucking
    </a></li>
    <li class="active Drivers_or_DriverAssistant"></li>
</ul>
<!-- end breadcrumb  -->

<div id="div-TRCK_Drivers">
    <!-- Region Options & Template  -->
    <div id="div-Data">
        <div id="div-Options">
            <div id="div-Action" class="radius-top-left-right">
            </div>
        </div>
        <section class="panel panel-default">
            <header class="panel-heading">
                <h3 id="h3TRCK_DriverTitle" class="m-b-none Drivers_or_DriverAssistant"></h3>
            </header>
            <!--Region the searh, delete, addnew-->
            <div class="row text-sm wrapper hidden-print ">
                <div id="div-main-options" class="col-sm-5 m-b-xs">
                    <button id="btn-NewAdd" class="btn btn-warning btn-sm hide" data-toggle="modal" data-target="#TRCK_DriverModal"><i class="fa fa-plus"></i>&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.New</button>
                    <button id="btn-ExportLicenseExpiration" onclick="ExportExpiredLicense();" title="Export expiration less than 30 days" class="btn btn-lightblue btn-sm" data-toggle="modal" data-target="#"><i class="fa fa-table"></i>&nbsp;License Expiration</button>
                    <div id="div-option-buttons" class="btn-group hide">
                        <button id="btn-Copy" type="button" class="btn btn-sm btn-default"><i class="fa fa-copy"></i>&nbsp;Copy </button>
                        <button id="btn-Print" type="button" class="btn btn-sm btn-default"><i class="fa fa-print"></i>&nbsp;Print </button>
                        <button id="btn-Send" type="button" class="btn btn-sm btn-default"><i class="fa fa-envelope-o"></i>&nbsp;Send </button>
                    </div>
                </div>
                <div id="div-search-option" class="col-sm-7">
                    <div id="div-search-controls" class="input-group col-sm-9">
                        <input id="txt-Search" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" style="text-transform:uppercase"  type="text" class="input-sm form-control" binding-name="SearchPlaceHolder" binding-prop="placeholder" placeholder="Search Code / Name / Local Name">
                        <span class="input-group-btn">
                            <button id="btn-search" class="btn btn-sm btn-primary" type="button" onclick="TRCK_Drivers_LoadingWithPaging();"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                    <div class="float-right col-sm-1">
                        <button id="btn-Delete" type="button" class="float-right btn btn-sm btn-danger m-r-n hide"><i class="fa fa-trash-o"></i>&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.Delete</button>
                    </div>
                </div>
            </div>
            <!--EOF Region the searh, delete, addnew line-->
            
            <!--TRCK_Drivers Modal-->
            <div class="modal fade" id="TRCK_DriverModal" tabindex="-1" style="data-keyboard="true" data-backdrop="false" role="dialog" aria-labelledby="TRCK_DriverModalLabel" aria-hidden="true">
                <div class="modal-dialog modalwidth-90">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h3 class="m-b-none Drivers_or_DriverAssistant"><label id="lblShown" purpose="dynamicLabel" class="static-text-primary"></label>
                        </h3>
                    </div>
                    <!-- Region Add / Edit Region Form -->
                    <div class="modal-body">
                        <div class="span7 form vertical-mode" id="TRCK_Driver-form">
                            <fieldset>
                                <div class="form-group pull-in  has-error clearfix">
                                    <input id="hTRCK_DriverID" type="hidden" />
                                    <!--Wizard-->
                                    <div class="wizard clearfix">
                                        <ul class="steps">
                                            <li data-target="#BasicData" id="stepsBasicData" class="active"><span class="badge badge-info">1</span>@Forwarding.MvcApp.App_Resources.App_Resources.BasicData</li>
                                            <li data-target="#tabAccounting" id="stepsAccounting" class="complete classAccountingOption"><span class="badge badge-info">$</span>@Forwarding.MvcApp.App_Resources.App_Resources.Accounting</li>
                                        </ul>
                                        <div class="actions" style="display:none;">
                                            <!--Next & Previous buttons-->
                                            <button type="button" class="btn btn-default btn-xs btn-prev" disabled="disabled">@Forwarding.MvcApp.App_Resources.App_Resources.Prev</button>
                                            <button type="button" class="btn btn-default btn-xs btn-next" data-last="Finish">@Forwarding.MvcApp.App_Resources.App_Resources.Next</button>
                                        </div>
                                    </div>
                                    <div class="step-content">
                                        <!--Basic Data-->
                                        <div class="step-pane active" id="BasicData">
                                            <!-- start alert message region -->
                                            <div class="alert alert-danger div-error">
                                                @Forwarding.MvcApp.App_Resources.App_Resources.ErrorMessage
                                            </div>
                                            <!-- end alert message region -->
                                            <!-- Add / Edit Basic Data -->
                                            <div class="row  col-sm-12">
                                                <div class="form-group col-sm-4">
                                                    <label>@Forwarding.MvcApp.App_Resources.App_Resources.Code</label>
                                                    <input type="text" id="txtCode" onkeypress="CheckValueIsInteger(id);" onfocus="CheckValueIsInteger(id);" class="form-control parsley-validated" data-required="false" data-minlength="1" maxlength="10" placeholder="Generated Automatically" style="text-transform:uppercase" />
                                                </div>
                                                <div class="form-group col-sm-4">
                                                    <label>@Forwarding.MvcApp.App_Resources.App_Resources.Name</label>
                                                    <input type="text" id="txtName" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" class="form-control parsley-validated" data-required="true" maxlength="50" placeholder="ex. SEA WINGS USA" style="text-transform:uppercase" />
                                                </div>
                                                <div class="form-group col-sm-4">
                                                    <label>@Forwarding.MvcApp.App_Resources.App_Resources.LocalName</label>
                                                    <input type="text" id="txtLocalName" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" class="form-control parsley-validated" data-required="false" maxlength="50" placeholder="ex. SEA WINGS USA" style="text-transform:uppercase" />
                                                </div>
                                            </div>
                                            <div class="row  col-sm-12">
                                                <div class="form-group col-sm-6">
                                                    <label>Supervisor</label>
                                                    <input type="text" id="txtSupervisorName" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" class="form-control parsley-validated" data-required="false" maxlength="300" placeholder="" style="text-transform:uppercase" />
                                                </div>    
                                                <div class="form-group col-sm-6">
                                                    <label>@Forwarding.MvcApp.App_Resources.App_Resources.Address</label>
                                                    <input type="text" id="txtAddress" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" class="form-control parsley-validated" data-required="false" maxlength="50" placeholder="" style="text-transform:uppercase" />
                                                </div>
                                            </div>
                                            <div class="row  col-sm-12">
                                                <div class="form-group col-sm-3">
                                                    <label>@Forwarding.MvcApp.App_Resources.App_Resources.Phone</label>
                                                    <input type="text" id="txtPhone" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" class="form-control parsley-validated" maxlength="50" placeholder="02 9999999" style="text-transform:uppercase" />
                                                </div>
                                                <div class="form-group col-sm-3">
                                                    <label>@Forwarding.MvcApp.App_Resources.App_Resources.Mobile</label>
                                                    <input type="text" id="txtMobile" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" class="form-control parsley-validated" maxlength="50" placeholder="010 9999999" style="text-transform:uppercase" />
                                                </div>
                                                <div class="form-group col-sm-3">
                                                    <label>@Forwarding.MvcApp.App_Resources.App_Resources.TRCK_NationalIDNumber </label>
                                                    <input type="text" id="txtNationalIDNumber" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" class="form-control parsley-validated" data-required="false" maxlength="50" placeholder="National ID Number" style="text-transform:uppercase" />
                                                </div>

                                                <div class="form-group col-sm-3">
                                                    <label>ID Expiration Date</label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon" style="background-color: #428bca;color:white;"><span class="fa fa-calendar"></span></span>
                                                        <input type="text" id="txtNationalIDExpireDate" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" style="cursor:text;" class="datepicker-input form-control input-sm" data-required="false" data-date-format="dd/mm/yyyy" placeholder="Select Date" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row  col-sm-12">
                                                <div class="form-group col-sm-3">
                                                    <label>@Forwarding.MvcApp.App_Resources.App_Resources.TRCK_LicenseNumber </label>
                                                    <input type="text" id="txtLicenseNumber" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" class="form-control parsley-validated" data-required="false" maxlength="50" placeholder="License Number" style="text-transform:uppercase" />
                                                </div>
                                                <div class="form-group col-sm-3">
                                                    <label>Licencse Expir.Date</label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon" style="background-color: #428bca;color:white;"><span class="fa fa-calendar"></span></span>
                                                        <input type="text" id="txtLicenseNumberExpireDate" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" style="cursor:text;" class="datepicker-input form-control input-sm" data-required="false" data-date-format="dd/mm/yyyy" placeholder="Select Date" />
                                                    </div>
                                                </div>
                                                <div class="form-group col-sm-3">
                                                    <label>@Forwarding.MvcApp.App_Resources.App_Resources.TRCK_ServiceStartDate </label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon" style="background-color:#428bca;color:white;"><span class="fa fa-calendar"></span></span>
                                                        <input type="text" id="txtServiceStartDate" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" style="cursor:text;" class="datepicker-input form-control input-sm" data-required="false" data-date-format="dd/mm/yyyy" placeholder="Select Date" />
                                                    </div>
                                                </div>
                                                <div class="form-group col-sm-3">
                                                    <label>@Forwarding.MvcApp.App_Resources.App_Resources.TRCK_ServiceEndDate</label>
                                                    <div class="input-group">
                                                        <span class="input-group-addon" style="background-color:#428bca;color:white;"><span class="fa fa-calendar"></span></span>
                                                        <input type="text" id="txtServiceEndDate" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" style="cursor:text;" class="datepicker-input form-control input-sm" data-required="false" data-date-format="dd/mm/yyyy" placeholder="Select Date" />
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="form-group col-sm-2">
                                                <label>Birth Date</label>
                                                <div class="input-group">
                                                    <span class="input-group-addon" style="background-color:#428bca;color:white;"><span class="fa fa-calendar"></span></span>
                                                    <input type="text" id="txtBirthDate" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" style="cursor:text;" class="datepicker-input form-control input-sm" data-required="false" data-date-format="dd/mm/yyyy" placeholder="Select Date" />
                                                </div>
                                            </div>
                                            
                                            <div class="form-group col-sm-6">
                                                <label>@Forwarding.MvcApp.App_Resources.App_Resources.Notes</label>
                                                <input type="text" id="txtNotes" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" class="form-control parsley-validated" data-required="false" maxlength="50" placeholder="" style="text-transform:uppercase" />
                                            </div>

                                            <div class="form-group col-sm-2  m-t-lg">
                                                <label><input type="checkbox" id="cbIsInactive" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);">&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.IsInactive</label><br />
                                            </div>

                                            <!--EOF Add / Edit Basic Data -->
                                        </div>
                                        <!--EOF Basic Data-->
                                        <!--Accounting-->
                                        <div class="step-pane" id="tabAccounting">
                                            <!-- start alert message region -->
                                            <div class="alert alert-danger div-error">
                                                @Forwarding.MvcApp.App_Resources.App_Resources.ErrorMessage
                                            </div>
                                            <!-- end alert message region -->
                                            <div class="form-group col-sm-6">
                                                <label>@Forwarding.MvcApp.App_Resources.App_Resources.ClientGroup</label>
                                                <select id="slSubAccountGroup" class="form-control m-b" onchange="FillSlAccountFromGroup('slAccount', 'slSubAccountGroup', 'slSubAccount', 0, 0);" onfocus="DisableBackspaceKey(id);" onkeydown="DisableBackspaceKey(id);" onkeypress="DisableBackspaceKey(id);" data-required="false"></select>
                                            </div>
                                            <div class="form-group col-sm-6">
                                                <label>@Forwarding.MvcApp.App_Resources.App_Resources.Account</label>
                                                <select id="slAccount" class="form-control m-b" @*onchange="FillSlSubAccount('slSubAccount', 'slAccount', 0, 0);"*@ onfocus="DisableBackspaceKey(id);" onkeydown="DisableBackspaceKey(id);" onkeypress="DisableBackspaceKey(id);" data-required="false"></select>
                                            </div>
                                            <div class="form-group col-sm-6">
                                                <label>@Forwarding.MvcApp.App_Resources.App_Resources.SubAccount</label>
                                                <select id="slSubAccount" class="form-control m-b" disabled="disabled" onfocus="DisableBackspaceKey(id);" onkeydown="DisableBackspaceKey(id);" onkeypress="DisableBackspaceKey(id);" data-required="false"></select>
                                            </div>
                                            <div class="form-group col-sm-6">
                                                <label>@Forwarding.MvcApp.App_Resources.App_Resources.CostCenter</label>
                                                <select id="slCostCenter" class="form-control m-b" onfocus="DisableBackspaceKey(id);" onkeydown="DisableBackspaceKey(id);" onkeypress="DisableBackspaceKey(id);" data-required="false"></select>
                                            </div>
                                            <!--The id of the next div is used to fill the Accounting in the textareas-->
                                            <div id="bodyAccounting"></div>
                                        </div> 
                                        <!--Accounting-->
                                    </div>
                                    <!--EOF Wizard-->
                                </div>
                            </fieldset>
                        </div>
                    </div>
                    <!-- Endregion Add / Edit Region Form -->
                    <div class="modal-footer">
                        <button type="button" id="btnSave" class="btn btn-primary btn-sm" onclick="TRCK_Drivers_Insert(false);">
                            <span class="glyphicon glyphicon-save"></span>@Forwarding.MvcApp.App_Resources.App_Resources.Save
                        </button>
                        <button type="button" id="btnSaveandNew" class="btn btn-primary btn-sm" onclick="TRCK_Drivers_Insert(true);">
                            <span class="glyphicon glyphicon-save"></span>@Forwarding.MvcApp.App_Resources.App_Resources.SaveAndNew
                        </button>
                        <button class="btnTRCK_DriverClose btn btn-link btn-sm" id="btnTRCK_DriverClose" @*onclick="TRCK_Drivers_UnlockRecord();"*@ data-dismiss="modal" aria-hidden="true">@Forwarding.MvcApp.App_Resources.App_Resources.Close</button><!--sherif: i added an id and the onclick fn go set the timelocked in the DB to null-->
                    </div>
                </div>
            </div>
        </div>
            <!--EOF TRCK_Drivers Modal-->
            
            <!--Region: table header-->
            <div class="table-responsive">
                <table id="tblTRCK_Drivers" class="table table-striped b-t b-light text-sm  table-hover">
                    <thead>
                        <tr>
                            <th id="ID">
                                <input id="cb-CheckAll" type="checkbox" />
                            </th>
                            <th class="th-sortable" data-toggle="class">@Forwarding.MvcApp.App_Resources.App_Resources.Code
                            </th>
                            <th>@Forwarding.MvcApp.App_Resources.App_Resources.Name
                            </th>
                            <th>@Forwarding.MvcApp.App_Resources.App_Resources.LocalName
                            </th>
                                                        
                            <th class="rounded-right hide"></th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
            <!--Region: table header-->

            <!--Region: footer-->
            <footer class="panel-footer">
                <div class="row">
                    <div class="col-sm-4 hidden-xs">
                        <select id="select-page-size" class="input-sm form-control input-s-sm inline">
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                        </select>
                        <button id="btn-applypaging" class="btn btn-sm btn-default" type="button">
                            @Forwarding.MvcApp.App_Resources.App_Resources.Apply
                        </button>
                    </div>
                    <div id="div-Text-Total" class="col-sm-4 text-center">
                        <small class="text-muted inline m-t-sm m-b-sm"> @Forwarding.MvcApp.App_Resources.App_Resources.Showing 
                            <span id="spn-first-page-row"></span>- <span id="spn-last-page-row"></span> @Forwarding.MvcApp.App_Resources.App_Resources.Of
                            <span id="spn-total-count"></span> @Forwarding.MvcApp.App_Resources.App_Resources.Items
                        </small>
                    </div>
                    <div id="div-Pager" class="col-sm-4 text-right text-center-xs float-right"></div>
                </div>
            </footer>
            <!--Region: footer-->
        </section>
    </div>
</div>