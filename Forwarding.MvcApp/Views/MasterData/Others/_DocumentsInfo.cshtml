<div id="div-DocumentsInfo">
    <!-- Add / Edit Region Modal -->
    <div class="modal fade" id="DocumentsInfoModal" tabindex="-1" data-keyboard="true" data-backdrop="false" role="dialog" aria-labelledby="DocumentsInfoModalLabel" aria-hidden="true">
        <div class="modal-dialog modalwidth-80">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="m-b-none">
                        @Forwarding.MvcApp.App_Resources.App_Resources.Document &nbsp;<label id="lblShown" purpose="dynamicLabel" class="static-text-primary"></label>
                </h3>
            </div>
            <!-- Region Add / Edit Region Form -->
            <div class="modal-body">
                <div class="span7 form vertical-mode" id="DocumentsInfo-form">
                    <fieldset>
                        <div class="form-group pull-in  has-error clearfix">
                            <input id="hID" type="hidden" />
                            <!-- start alert message region -->
                            <div class="alert alert-danger div-error">
                                @Forwarding.MvcApp.App_Resources.App_Resources.ErrorMessage
                            </div>
                            <!-- end alert message region -->
                            <!-- Region Add / Edit Region Form -->


                            <div class="row swapChildrenClass">
                                <div class="form-group col-sm-3 hide">
                                    <label>@Forwarding.MvcApp.App_Resources.App_Resources.Code</label>
                                    <input type="text" id="txtCode" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" class="form-control parsley-validated" data-required="false" maxlength="1000" placeholder="" />
                                </div>
                                <div class="form-group col-sm-3">
                                    <label>@Forwarding.MvcApp.App_Resources.App_Resources.Name</label>
                                    <input type="text" id="txtName" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" class="form-control parsley-validated" data-required="true" maxlength="1000" placeholder="" />
                                </div>
                                <div class="form-group col-sm-3 hide">
                                    <label>@Forwarding.MvcApp.App_Resources.App_Resources.DocumentLevel</label>
                                    <input type="text" id="txtDegree" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" class="form-control parsley-validated" data-required="false" maxlength="1000" placeholder="" />
                                </div>

                                <div class="form-group col-sm-3">
                                    <label>@Forwarding.MvcApp.App_Resources.App_Resources.Notes</label>
                                    <input type="text" id="txtNotes" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" class="form-control parsley-validated" data-required="false" maxlength="250" placeholder="" style="text-transform:uppercase" />
                                </div>



                                <div class="form-group col-sm-3 m-t">
                                    <section class="panel panel-default">
                                        <header class="panel-heading font-bold">@Forwarding.MvcApp.App_Resources.App_Resources.Direction</header>
                                        <label class="m-l"><input type="checkbox" id="cbIsImport" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" name="cbDirectionType" value="1">&nbsp;<i class='fa fa-arrow-circle-down import-icon-style' />&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.Import</label><br />
                                        <label class="m-l"><input type="checkbox" id="cbIsExport" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" name="cbDirectionType" value="2">&nbsp;<i class='fa fa-external-link export-icon-style' />&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.Export</label><br />
                                        <label class="m-l"><input type="checkbox" id="cbIsDomestic" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" name="cbDirectionType" value="3">&nbsp;<i class='fa fa-home domestic-icon-style' />&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.Domestic</label><br />
                                    </section>
                                </div>
                                <div class="form-group col-sm-3 m-t">
                                    <section class="panel panel-default">
                                        <header class="panel-heading font-bold">@Forwarding.MvcApp.App_Resources.App_Resources.TransportMode</header>
                                        <label class="m-l"><input type="checkbox" id="cbIsOcean" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" name="cbTransportType" value="1">&nbsp;<i class='fa fa-anchor ocean-icon-style' />&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.IsOcean</label><br />
                                        <label class="m-l"><input type="checkbox" id="cbIsAir" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" name="cbTransportType" value="2">&nbsp;<i class='fa fa-plane air-icon-style' />&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.IsAir</label><br />
                                        <label class="m-l"><input type="checkbox" id="cbIsInland" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" name="cbTransportType" value="3">&nbsp;<i class='fa fa-truck inland-icon-style' />&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.IsInland</label><br />
                                    </section>
                                </div>

                            </div>

                            <div class="row swapChildrenClass">
                                <div class="form-group col-sm-3 m-t hide">
                                    <section class="panel panel-default">
                                        <header class="panel-heading font-bold">@Forwarding.MvcApp.App_Resources.App_Resources.DocumentImportance</header>
                                        <label class="m-l"><input type="radio" checked id="cbIsRequired" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" name="cbDocumentImportance" value="10">&nbsp;<i class='' />&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.Required</label><br />
                                        <label class="m-l"><input type="radio" id="cbIsOptional" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" name="cbDocumentImportance" value="20">&nbsp;<i class='' />&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.Optional</label><br />
                                    </section>
                                </div>
                                
                                <div class="form-group col-sm-3 m-t hide">
                                    <section class="panel panel-default">
                                        <header class="panel-heading font-bold">@Forwarding.MvcApp.App_Resources.App_Resources.ContentType</header>
                                        <label @*id="lblFCL"*@ class="m-l"><input type="checkbox" id="cbIsFCL" onchange="" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" name="cbShipmentType" value="1">&nbsp;حاوية - Containers</label><br />
                                        <label @*id="lblLCL"*@ class="m-l"><input type="checkbox" id="cbIsLCL" onchange="" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" name="cbShipmentType" value="2">&nbsp;طرد - lcl</label><br />
                                        <label class="m-l"><input type="checkbox" id="cbIsVehicle" onchange="" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" name="cbShipmentType" value="30">&nbsp;سيارات - Cars</label><br />
                                        <label class="m-l"><input type="checkbox" id="cbIsBulk" onchange="" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" name="cbShipmentType" value="40">&nbsp;سائب - Bulk</label>
                                    </section>
                                </div>
                            </div>

                        </div>
                    </fieldset>
                </div>
            </div>
            <!-- Endregion Add / Edit Region Form -->
            <div class="modal-footer">
                <button type="button" id="btnSave" class="btn btn-primary btn-sm" onclick="DocumentsInfo_Insert(false);">
                    <span class="glyphicon glyphicon-save"></span>@Forwarding.MvcApp.App_Resources.App_Resources.Save
                </button>
                <button type="button" id="btnSaveandNew" class="btn btn-primary btn-sm hide" onclick="DocumentsInfo_Insert(true);">
                    <span class="glyphicon glyphicon-save"></span>@Forwarding.MvcApp.App_Resources.App_Resources.SaveAndNew
                </button>
                <button class="btnClose btn btn-link btn-sm" id="btnClose" @*onclick="DocumentsInfo_UnlockRecord();"*@ data-dismiss="modal" aria-hidden="true">@Forwarding.MvcApp.App_Resources.App_Resources.Close</button><!--sherif: i added an id and the onclick fn go set the timelocked in the DB to null-->
            </div>
        </div>
    </div>
</div>
<!-- Region Options & Template  -->

<div id="div-Data">
    <div id="div-Options">
        <div id="div-Action" class="radius-top-left-right">
        </div>
    </div>
    <section class="panel panel-default">
        <header class="panel-heading">
            <h3 class="m-b-none">
                @Forwarding.MvcApp.App_Resources.App_Resources.DocumentsInfo
        </h3>
    </header>
    <!--Region the searh, delete, addnew-->
    <div class="row text-sm wrapper hidden-print">
        <div id="div-main-options" class="col-sm-5 m-b-xs">
            <button id="btn-NewAdd" class="btn btn-warning btn-sm hide" data-toggle="modal" data-target="#DocumentsInfoModal"><i class="fa fa-plus"></i>&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.New</button>
            <div id="div-option-buttons" class="btn-group hide">
                <button id="btn-Copy" type="button" class="btn btn-sm btn-default"><i class="fa fa-copy"></i>&nbsp;Copy </button>
                <button id="btn-Print" type="button" class="btn btn-sm btn-default"><i class="fa fa-print"></i>&nbsp;Print </button>
                <button id="btn-Send" type="button" class="btn btn-sm btn-default"><i class="fa fa-envelope-o"></i>&nbsp;Send </button>
            </div>
        </div>
        <div id="div-search-option" class="col-sm-7">
            <div id="div-search-controls" class="input-group col-sm-9">
                <input id="txt-Search" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" style="text-transform:uppercase" type="text" class="input-sm form-control" binding-name="SearchPlaceHolder" binding-prop="placeholder" placeholder="Search Name / ISO Code">
                <span class="input-group-btn">
                    <button id="btn-search" class="btn btn-sm btn-primary" type="button" onclick="DocumentsInfo_LoadingWithPaging();"><i class="fa fa-search"></i></button>
                </span>
            </div>
            <div class="float-right col-sm-1">
                <button id="btn-Delete" type="button" class="float-right btn btn-sm btn-danger m-r-n hide"><i class="fa fa-trash-o"></i>&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.Delete</button>
            </div>
        </div>
    </div>
    <!--Region the searh, delete, addnew-->
    <!--Region: table header-->
    <div class="table-responsive">
        <table id="tblDocumentsInfo" class="table table-striped b-t b-light text-sm  table-hover">
            <thead>
                <tr>
                    <th id="ID">
                        <input id="cb-CheckAll" type="checkbox" />
                    </th>
                    @*<th>
                        @Forwarding.MvcApp.App_Resources.App_Resources.Code
                    </th>*@
                    <th>
                        @Forwarding.MvcApp.App_Resources.App_Resources.Name
                    </th>

                    @*<th>
                        @Forwarding.MvcApp.App_Resources.App_Resources.Importance
                    </th>*@
                    @*<th>
                        @Forwarding.MvcApp.App_Resources.App_Resources.DocumentLevel
                    </th>*@
                    <th>
                        @Forwarding.MvcApp.App_Resources.App_Resources.Import
                    </th>
                    <th>
                        @Forwarding.MvcApp.App_Resources.App_Resources.Export
                    </th>
                    <th>
                        @Forwarding.MvcApp.App_Resources.App_Resources.Domestic
                    </th>
                    <th>
                        @Forwarding.MvcApp.App_Resources.App_Resources.Ocean
                    </th>
                    <th>
                        @Forwarding.MvcApp.App_Resources.App_Resources.Air
                    </th>
                    <th>
                        @Forwarding.MvcApp.App_Resources.App_Resources.Inland
                    </th>

                    @*<th>Containers - حاويات</th>
                    <th>طرد - lcl</th>
                    <th>سيارات - Cars</th>
                    <th>سائب - Bulk</th>*@

                    <th class="rounded-right hide"></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
    <!--Region: table header-->
    <!--Region: footer-->
    <footer class="panel-footer">
        <div class="row">
            <div class="col-sm-4 hidden-xs">
                <select id="select-page-size" class="input-sm form-control input-s-sm inline">
                    <option value="10">10</option>
                    <option value="25">25</option>
                    <option value="50">50</option>
                </select>
                <button id="btn-applypaging" class="btn btn-sm btn-default" type="button">
                    @Forwarding.MvcApp.App_Resources.App_Resources.Apply
                </button>
            </div>
            <div id="div-Text-Total" class="col-sm-4 text-center">
                <small class="text-muted inline m-t-sm m-b-sm">
                    @Forwarding.MvcApp.App_Resources.App_Resources.Showing
                    <span id="spn-first-page-row"></span>- <span id="spn-last-page-row"></span> @Forwarding.MvcApp.App_Resources.App_Resources.Of
                    <span id="spn-total-count"></span> @Forwarding.MvcApp.App_Resources.App_Resources.Items
                </small>
            </div>
            <div id="div-Pager" class="col-sm-4 text-right text-center-xs float-right"></div>
        </div>
    </footer>
    <!--Region: footer-->
</section>
</div>
</div>
