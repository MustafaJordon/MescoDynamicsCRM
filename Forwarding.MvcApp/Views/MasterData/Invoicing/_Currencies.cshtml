                                            <thead>
                                                <tr class="">
                                                    <th id="HeaderDeleteDetailsID">
                                                        <input id="cbDetailsDeleteHeader" type="checkbox" />
                                                    </th>
                                                    <th>@Forwarding.MvcApp.App_Resources.App_Resources.Serial</th>
