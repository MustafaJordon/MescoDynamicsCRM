                                <label>@Forwarding.MvcApp.App_Resources.App_Resources.Notes</label>
                                <input type="text" id="txtNotes" class="form-control parsley-validated" data-required="false" maxlength="50" placeholder="ex. Notes...." style="text-transform:uppercase" />
