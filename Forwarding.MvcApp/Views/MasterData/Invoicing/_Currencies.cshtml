                                                    <th>@Forwarding.MvcApp.App_Resources.App_Resources.To</th>
                                                    <th>@Forwarding.MvcApp.App_Resources.App_Resources.ExchangeRate</th>
                                                    <th>@Forwarding.MvcApp.App_Resources.App_Resources.SellingRate</th>
                                                
                                                    <th class="rounded-right hide"></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            </tbody>
                                        </table>
                                    </div>
                                </section>
                            </div>
                            <!-- Region Add / Edit Region Form -->
                        </div>
                    </fieldset>
                </div>
            </div>
            <!-- Endregion Add / Edit Region Form -->
            <div class="modal-footer m-t-n-lg">
                <button type="button" id="btnSave" class="btn btn-primary btn-sm swapChildrenClass" onclick="Currencies_Save();">
                    <span class="glyphicon glyphicon-save"></span><b>&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.Save&nbsp;</b></button>
