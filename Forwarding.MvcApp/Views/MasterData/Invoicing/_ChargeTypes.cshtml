                                <label>@Forwarding.MvcApp.App_Resources.App_Resources.InvoiceType</label>
                                <select id="slInvoiceTypes" onfocus="DisableBackspaceKey(id);" onkeydown="DisableBackspaceKey(id);" onkeypress="DisableBackspaceKey(id);" class="form-control m-b input-sm" data-required="false"></select>
