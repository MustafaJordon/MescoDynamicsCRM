                                <label>@Forwarding.MvcApp.App_Resources.App_Resources.TransportMode</label><br />
                                <label><input type="checkbox" id="cbIsOcean" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);">&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.IsOcean</label><br />
                                <label><input type="checkbox" id="cbIsAir" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);">&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.IsAir</label><br />
                                <label><input type="checkbox" id="cbIsInland" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);">&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.IsInland</label>
                            </div>

                            <div class="form-group col-sm-3">
                                <label>@Forwarding.MvcApp.App_Resources.App_Resources.Type</label><br />
                                <label><input type="checkbox" id="cbIsGeneralChargeType" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);">&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.GeneralChargeType</label><br />
                                <label><input type="checkbox" id="cbIsWarehouseChargeType" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);">&nbsp;Warehouse Charge Type</label><br />
                                <label><input type="checkbox" id="cbIsOperationChargeType" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);">&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.OperationChargeType</label>
                            </div>


                            <div class="form-group col-sm-3">
                                <label><input type="checkbox" id="cbIsOfficial" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);">&nbsp;Official</label>
                            </div>

                            <div class="form-group col-sm-11 hide">
                                <br />
                                <label class="m-t-xs"><input type="checkbox" id="cbIsInactive" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);">&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.IsInactive</label>
                            </div>
                            <!-- Region Add / Edit Region Form -->
                        </div>
                    </fieldset>
                </div>
            </div>
            <!-- Endregion Add / Edit Region Form -->
            <div class="modal-footer m-t-n">
                <button type="button" id="btnSave" class="btn btn-primary btn-sm classDisableForTank" onclick="ChargeTypes_Insert(false);">
                    <span class="glyphicon glyphicon-save"></span>@Forwarding.MvcApp.App_Resources.App_Resources.Save
