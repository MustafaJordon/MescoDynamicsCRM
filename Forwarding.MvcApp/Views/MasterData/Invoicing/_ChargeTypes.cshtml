                            </div>
                            @*<div class="form-group col-sm-6">
                                    <br/><br/><br/><br/>
                                </div>*@
                            <div class="form-group col-sm-3" style="clear:both;">
                                <label>@Forwarding.MvcApp.App_Resources.App_Resources.UsedIn</label><br />
                                <label><input type="checkbox" id="cbIsUsedInReceivable" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);">&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.Receivable</label><br />
                                <label><input type="checkbox" id="cbIsUsedInPayable" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);">&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.Payable</label><br />
