                            </div>
                            <div class="form-group col-sm-4 classAccountingOption hide">
                                <label>@Forwarding.MvcApp.App_Resources.App_Resources.RevenueSubAccount</label>
                                <select id="slRevenueSubAccount" class="form-control m-b input-sm" onfocus="DisableBackspaceKey(id);" onkeydown="DisableBackspaceKey(id);" onkeypress="DisableBackspaceKey(id);" data-required="false"></select>
                            </div>
                            <div class="form-group col-sm-4 classAccountingOption hide">
                                <label>@Forwarding.MvcApp.App_Resources.App_Resources.RevenueCostCenter</label>
                                <select id="slRevenueCostCenter" class="form-control m-b input-sm" onfocus="DisableBackspaceKey(id);" onkeydown="DisableBackspaceKey(id);" onkeypress="DisableBackspaceKey(id);" data-required="false"></select>
                            </div>
                            <div class="form-group col-sm-4 classAccountingOption hide">
                                <label>@Forwarding.MvcApp.App_Resources.App_Resources.ExpenseAccount</label>
                                <select id="slExpenseAccount" class="form-control m-b input-sm" onchange="FillSlSubAccount('slExpenseSubAccount', 'slExpenseAccount', 0, 0);" onfocus="DisableBackspaceKey(id);" onkeydown="DisableBackspaceKey(id);" onkeypress="DisableBackspaceKey(id);" data-required="false"></select>
                            </div>
                            <div class="form-group col-sm-4 classAccountingOption hide">
                                <label>@Forwarding.MvcApp.App_Resources.App_Resources.ExpenseSubAccount</label>
                                <select id="slExpenseSubAccount" class="form-control m-b input-sm" onfocus="DisableBackspaceKey(id);" onkeydown="DisableBackspaceKey(id);" onkeypress="DisableBackspaceKey(id);" data-required="false"></select>
                            </div>
                            <div class="form-group col-sm-4 classAccountingOption hide">
                                <label>@Forwarding.MvcApp.App_Resources.App_Resources.ExpenseCostCenter</label>
                                <select id="slExpenseCostCenter" class="form-control m-b input-sm" onfocus="DisableBackspaceKey(id);" onkeydown="DisableBackspaceKey(id);" onkeypress="DisableBackspaceKey(id);" data-required="false"></select>
                            </div>

                            <div class="form-group col-sm-4 hide classShowForTaxOnItems">
                                <label>@Forwarding.MvcApp.App_Resources.App_Resources.TaxeType</label>
                                <select id="slTaxeTypes" onfocus="DisableBackspaceKey(id);" onkeydown="DisableBackspaceKey(id);" onkeypress="DisableBackspaceKey(id);" class="form-control m-b input-sm" data-required="false"></select>
                            </div>
