                        <span class="input-group-btn">
                            <button id="btn-search" class="btn btn-sm btn-primary" type="button" onclick="Customers_LoadingWithPaging();"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                    <div class="float-right col-sm-1">
                        <button id="btn-Delete" type="button" class="float-right btn btn-sm btn-danger m-r-n hide"><i class="fa fa-trash-o"></i>&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.Delete</button>
                    </div>
                </div>
            </div>
            <!--EOF Region the searh, delete, addnew line-->
            <!--Customers Modal-->
            <!--EOF Customers Modal-->
            <!--Region: table header-->
            <div class="table-responsive">
                <table id="tblCustomers" class="table table-striped b-t b-light text-sm  table-hover">
                    <thead>
                        <tr>
                            <th id="ID">
                                <input id="cb-CheckAll" type="checkbox" />
                            </th>
                            <th class="ShowForTopManagement hide">
                                @Forwarding.MvcApp.App_Resources.App_Resources.CompanyName
                            </th>
                            <th class="th-sortable" data-toggle="class">
                                @Forwarding.MvcApp.App_Resources.App_Resources.Code
                            </th>
                            <th>
                                @Forwarding.MvcApp.App_Resources.App_Resources.Name
                            </th>
                            <th>
                                @Forwarding.MvcApp.App_Resources.App_Resources.LocalName
                            </th>
                            <th>
                                @Forwarding.MvcApp.App_Resources.App_Resources.PaymentTerm
                            </th>
                            <th>
                                @Forwarding.MvcApp.App_Resources.App_Resources.IsInactive
                            </th>
                            <th>
                                @Forwarding.MvcApp.App_Resources.App_Resources.IsActiveUser
                            </th>
                            <th>
                                @Forwarding.MvcApp.App_Resources.App_Resources.Username
                            </th>
                            <th class="">
                                @Forwarding.MvcApp.App_Resources.App_Resources.CRM
                            </th>
                            <th class="">
                                Price List
                            </th>
                            <th class="hide">
                                @Forwarding.MvcApp.App_Resources.App_Resources.Notes
                            </th>
                            <th class="rounded-right hide"></th>
                        </tr>
    </thead>
    <tbody></tbody>
    </table>
    </div>
    <!--Region: table header-->
    <!--Region: footer-->
    <footer class="panel-footer">
        <div class="row">
            <div class="col-sm-4 hidden-xs">
                <select id="select-page-size" class="input-sm form-control input-s-sm inline">
                    <option value="10">10</option>
                    <option value="25">25</option>
                    <option value="50">50</option>
                </select>
                <button id="btn-applypaging" class="btn btn-sm btn-default" type="button">
                    @Forwarding.MvcApp.App_Resources.App_Resources.Apply
                </button>
            </div>
            <div id="div-Text-Total" class="col-sm-4 text-center">
                <small class="text-muted inline m-t-sm m-b-sm">
                    @Forwarding.MvcApp.App_Resources.App_Resources.Showing
                    <span id="spn-first-page-row"></span>- <span id="spn-last-page-row"></span> @Forwarding.MvcApp.App_Resources.App_Resources.Of
                    <span id="spn-total-count"></span> @Forwarding.MvcApp.App_Resources.App_Resources.Items
                </small>
            </div>
            <div id="div-Pager" class="col-sm-4 text-right text-center-xs float-right"></div>
        </div>
    </footer>
    <!--Region: footer-->
    </section>


