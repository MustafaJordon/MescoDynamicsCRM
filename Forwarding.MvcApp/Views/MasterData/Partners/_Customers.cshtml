                            </div>
                            <section class="panel panel-default m-t-sm">
                                <div class="wizard wizard-vertical Automail-wizard">
                                    <ul class="steps">
                                        @*<li data-target="#ReportView" id="stepsReportView" onclick="" class="active"><span class="badge badge-info" style="background-color:midnightblue;">1</span>@Forwarding.MvcApp.App_Resources.App_Resources.ReportView</li>*@
