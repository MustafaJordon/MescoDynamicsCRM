                                                </div>
                                            </section>
                                        </div>
                                    </div>
                                    <div id="AgingAutoMailPlan" style="padding:1px!important;" class="step-pane  step-content">
                                        <header class="panel-heading hide">
                                            <div id="hExportedTable" class="hide"></div>
                                            <h3 class="m-b-none">@Forwarding.MvcApp.App_Resources.App_Resources.AgingAutomailPlan</h3>
                                            @*<h3 class="m-b-none">Best Print Using Internet Explorer</h3>*@
                                        </header>

                                        <div class="row text-sm wrapper hidden-print ">
                                            <section id="secCustomers_Aging" class="col-sm-12 panel panel-default">
                                                <div class="">
                                                    <label class="swapChildrenClass"><input type="checkbox" id="cbCheckAllCustomers_Aging" onchange="cbCheckAllCustomers_AgingAutomailChanged();" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);"><u>&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.SelectAllCustomers&nbsp;</u></label><br />
