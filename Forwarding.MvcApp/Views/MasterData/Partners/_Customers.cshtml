            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="m-b-none">
                        @Forwarding.MvcApp.App_Resources.App_Resources.Customer &nbsp;<label id="lblShown" purpose="dynamicLabel" class="static-text-primary"></label>
                    </h3>
                </div>
                <!-- Region Add / Edit Region Form -->
                <div class="modal-body">
                    <div class="span7 form vertical-mode" id="CustomerAutomailPlan-form">
                        <fieldset>
                            <div class="row">
                                <div class="col-sm-3">
                                    <label>@Forwarding.MvcApp.App_Resources.App_Resources.Customer</label>
                                    <input type="text" id="txtCustomerName_Automail" class="form-control input-sm" placeholder="Search by Name / Local Name" style="text-transform:uppercase;">
                                </div>
                                <div class="col-sm-2">
                                    <label>@Forwarding.MvcApp.App_Resources.App_Resources.PeriodType</label>
