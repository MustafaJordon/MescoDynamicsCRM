<!--PartnerModal-->
<div class="modal fade" id="PartnerModal" tabindex="-1" style="z-index: 1040;" data-keyboard="true" data-backdrop="false" role="dialog" aria-labelledby="PartnerModalLabel" aria-hidden="true">
    <div class="modal-dialog modalwidth-50">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="m-b-none">@Forwarding.MvcApp.App_Resources.App_Resources.Partner &nbsp;<label id="lblPartnerShown" purpose="dynamicLabel" class="static-text-primary"></label>
                </h3> 
            </div>
            <div class="modal-body">
                <!-- Region Add / Edit Partner Form -->
                <div class="span7 form vertical-mode" id="Partner-form">
                    <fieldset>
                        <div class="form-group pull-in  has-error clearfix">
                            <input id="hOperationPartnerID" type="hidden" />
                            <input id="hPartnerTypeID" type="hidden" />
                            <!-- start alert message region -->
                            <div class="alert alert-danger div-error">
                                @Forwarding.MvcApp.App_Resources.App_Resources.ErrorMessage
                            </div>
                            <!-- end alert message region -->
                            <div class="form-group col-sm-11 m-l-md">
                                <label>@Forwarding.MvcApp.App_Resources.App_Resources.PartnerType</label>
                                <select id="slOperationPartnerTypes" name="slOperationPartnerTypes" onfocus="DisableBackspaceKey(id);" onkeydown="DisableBackspaceKey(id);" onkeypress="DisableBackspaceKey(id);" class="form-control m-b" onchange="PartnerNames_GetList();"></select>
                            </div>
                            
                            <div class="form-group col-sm-9 m-l-md">
                                <label>@Forwarding.MvcApp.App_Resources.App_Resources.PartnerName</label>
                                <select id="slPartners" name="slPartners" onfocus="DisableBackspaceKey(id);" onkeydown="DisableBackspaceKey(id);" onkeypress="DisableBackspaceKey(id);" class="form-control m-b" data-required="true" onchange="PartnerContacts_GetList();"></select>
                            </div>
                            <div class="col-sm-2 m-t-xs">
                                <br /> @* the data-target attr in the next 2 lines are set  automatically in the PartnerNames_GetList fn *@
                                <button id="btn-EditPartner" class="btn btn-info btn-sm hide" data-toggle="modal" data-target=""><i class="fa fa-pencil"></i></button>
                                <button id="btn-NewAddPartner" class="btn btn-warning btn-sm hide" data-toggle="modal" data-target=""><i class="fa fa-plus"></i></button>
                            </div>
                            <div class="form-group col-sm-11 m-l-md">
                                <label>@Forwarding.MvcApp.App_Resources.App_Resources.PartnerContact</label>
                                <select id="slPartnerContacts" name="slPartnerContacts" onfocus="DisableBackspaceKey(id);" onkeydown="DisableBackspaceKey(id);" onkeypress="DisableBackspaceKey(id);" class="form-control m-b" data-required="false"></select>
                            </div>
                            <div id="divCbIsOperationClient" class="form-group col-sm-11 m-l-md hide">
                                <label class="m-t-sm"><input type="checkbox" id="cbIsOperationClient">&nbsp;Set as Operation Client</label>
                            </div>
                        </div>
                    </fieldset>
                </div>
                <!-- Endegion Add / Edit Country Form -->
            </div>
            <div class="modal-footer m-t-n"><!--sherif-->
                <button type="button" id="btnSavePartner" class="btn btn-primary btn-sm">
                    <span class="glyphicon glyphicon-save"></span>@Forwarding.MvcApp.App_Resources.App_Resources.Save</button>
                <button type="button" id="btnSaveandNewPartner" class="btn btn-primary btn-sm hide">
                    <span class="glyphicon glyphicon-save"></span>@Forwarding.MvcApp.App_Resources.App_Resources.SaveAndNew</button>
                <button class="btn btn-link btn-sm" data-dismiss="modal" aria-hidden="true">@Forwarding.MvcApp.App_Resources.App_Resources.Close</button>
            </div>
        </div>
    </div>
</div>
<!--EOF PartnerModal-->
