<!-- start breadcrumb  -->
<ul id="ul-breadcrumb" class="breadcrumb no-border no-radius b-b b-light pull-in">
    <li><a id="hl-homepage" href="javascript:void(0);"><i class="fa fa-home icon-home"></i><span>@Forwarding.MvcApp.App_Resources.App_Resources.HomePage</span>
    </a></li>
    <li><a id="PricingModule" href="javascript:void(0);" onclick="LoadViews('Pricing')">@Forwarding.MvcApp.App_Resources.App_Resources.Pricing
    </a></li>
    <li><a id="PricingTab" href="javascript:void(0);" onclick="LoadViews('Pricing')">@Forwarding.MvcApp.App_Resources.App_Resources.Pricing
    </a></li>
    <li class="active">@Forwarding.MvcApp.App_Resources.App_Resources.PricingSettings</li>
</ul>
