<div id="div-SetOperationStage">
    <!-- Region Options & Template  -->
    <div id="div-Data">
        <div id="div-Options">
            <div id="div-Action" class="radius-top-left-right">
            </div>
        </div>
        <section class="panel panel-default">
            <header class="panel-heading">
                <div id="hExportedTable" class="hide"></div>
                <h3 class="m-b-none">@Forwarding.MvcApp.App_Resources.App_Resources.FilterBy</h3>
                @*<h3 class="m-b-none">Best Print Using Internet Explorer</h3>*@
            </header>
            <!--Region the searh, delete, addnew-->
            <div class="row text-sm wrapper hidden-print m-l">
                <div id="div-main-options">
                    <!--Region Filter-->
                    <div class="form-group col-sm-2 m-l-n">
                        <label>@Forwarding.MvcApp.App_Resources.App_Resources.Status</label>
                        <select id="slOperationStages" onfocus="DisableBackspaceKey(id);" onkeydown="DisableBackspaceKey(id);" onkeypress="DisableBackspaceKey(id);" class="form-control input-sm">
                            <option value="60">OPEN</option>
                            <option value="120">CLOSED</option>
                        </select>
                    </div>
                    
                    <div class="form-group col-sm-2 m-l-n">
                        <label>@Forwarding.MvcApp.App_Resources.App_Resources.From</label>
                        <input id="txtFromDateSelectOperations" readonly="readonly" type="text" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" style="background-color:white; cursor:text;" class="input-sm datepicker-input form-control" data-date-format="dd/mm/yyyy" placeholder="Select Date" />
                    </div>
                    <div class="form-group col-sm-2 m-l-n">
                        <label>@Forwarding.MvcApp.App_Resources.App_Resources.To</label>
                        <input id="txtToDateSelectOperations" readonly="readonly" type="text" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" style="background-color:white; cursor:text;" class="input-sm datepicker-input form-control" data-date-format="dd/mm/yyyy" placeholder="Select Date" />
                    </div>

                    <div class="col-sm-2 m-l-n">
                        <label>@Forwarding.MvcApp.App_Resources.App_Resources.Code</label>
                        <div id="div-search-controls" class="input-group">
                            <input id="txtSearchItems" style="text-transform:uppercase" type="text" class="input-sm form-control" binding-name="SearchPlaceHolder" binding-prop="placeholder" placeholder="Operation Code" />
                            <span class="input-group-btn">
                                <button id="btn-SearchItems" class="btn btn-sm btn-lightblue" type="button" onclick="OperationsStatistics_FilterOperationsModal();"><i class="fa fa-search"> Search </i></button>
                            </span>
                        </div>
                    </div>

                    <div class="form-group col-sm-2 m-l-n" style="clear:both;">
                        <label>@Forwarding.MvcApp.App_Resources.App_Resources.CloseDate</label>
                        <input id="txtCloseDate" readonly="readonly" type="text" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" style="background-color:white; cursor:text;" class="input-sm datepicker-input form-control" data-date-format="dd/mm/yyyy" placeholder="Select Date" />
                    </div>
                    @*<div class="col-sm-3 m-l-n-sm m-t-sm">
                            <br />
                            <label> <input type="checkbox" id="cbIncludeCurrenciesDetails" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);"> Show Currencies Details</label>
                            <br /><br />
                        </div>*@

                    


                        <!-- Region CheckboxesList Form -->
                        

                        <div style="clear:both;" class="span7 form vertical-mode m-t" id="CheckboxesList-form">
                            <fieldset>
                                <button id="btn-SelectAllOperations" type="button" class="btn btn-primary btn-sm" onclick="OperationsStatistics_SelectAllOperations();"><i class="fa "></i><b>&nbsp;Select All</b></button>
                                <button id="btn-ClearAllOperations" type="button" class="btn btn-warning btn-sm" onclick="OperationsStatistics_ClearAllOperations();"><i class="fa "></i><b>&nbsp;Clear All</b></button>
                                <button id="btn-SetOperationStage" type="button" class="btn btn-lightblue btn-sm" onclick="SetOperationStage();"><i class="fa "></i><b>&nbsp;Set Status</b></button>

                                <div id="divCheckboxesList" style="clear:both;">
                                </div>
                            </fieldset>
                        </div>
                        <!-- Endegion CheckboxesList Form -->
                    


                </div>
            </div>
            <!--EOF Region the searh, delete, addnew line-->


        </section>
    </div>
</div>
