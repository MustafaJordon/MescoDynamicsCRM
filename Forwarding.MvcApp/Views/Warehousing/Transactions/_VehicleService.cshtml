                                <input id="hOperationVehicleID" type="hidden" value="0" />
                            </div>

                            <div id="divPayBtns" class="col-sm-6 m-t-n-sm">
                                <button id="btn-AddPayables" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#SelectChargesModal" onclick="Payables_GetAvailableCharges();"><i class="fa fa-plus"></i>&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.AddPayables</button>
