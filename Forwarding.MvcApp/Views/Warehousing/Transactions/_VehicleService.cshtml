                                    <!--Region: table header-->
                                    <div class="table-responsive" style="width:100%; height:450px; overflow:scroll;">
                                        <table id="tblReceivables" class="table table-striped b-t b-light text-sm  table-hover ">
                                            <thead>
                                                <tr>
                                                    <th id="HeaderDeleteReceivableID">
                                                        <input id="cb-CheckAll-Receivables" type="checkbox" />
                                                    </th>
                                                    <th>@Forwarding.MvcApp.App_Resources.App_Resources.ChargeType</th>
                                                    <th>@Forwarding.MvcApp.App_Resources.App_Resources.Qty</th>
                                                    <th>@Forwarding.MvcApp.App_Resources.App_Resources.UnitPriceAbbrev</th>
                                                    <th>Tax</th>
                                                    <th>Deduction</th>
                                                    <th>@Forwarding.MvcApp.App_Resources.App_Resources.SaleAmount</th>
                                                    <th>@Forwarding.MvcApp.App_Resources.App_Resources.ExchangeRateAbbrev</th>
                                                    <th>@Forwarding.MvcApp.App_Resources.App_Resources.Cur</th>
                                                    <th class="rounded-right hide"></th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>
                                    <!--Region: EOF table header-->
                                    <!--Region: table footer-->
                                    <footer class="panel-footer">
                                        <span id="spanNoReceivables" class="hide">No Receivables.</span>
                                    </footer>
                                    <!--Region: EOF table footer-->
                                </section>
                            </div>
                            <!--EOF Charges-->

                        </div>
                    </fieldset>
                </div>
            </div>
            <!-- Endregion Add / Edit Region Form -->
