<div id="div-Receive">
    <div id="div-Data">
        <div id="div-Options">
            <div id="div-Action" class="radius-top-left-right">
            </div>
        </div>
        <section class="panel panel-default">
            <header class="panel-heading">
                <h3 class="m-b-none">
                    @Forwarding.MvcApp.App_Resources.App_Resources.VehicleService
                </h3>
            </header>
            <!--Region the searh, delete, addnew-->
            <div class="row text-sm wrapper hidden-print ">
                <div id="div-main-options" class="col-sm-5 m-b-xs">
                    <button id="btn-NewAdd-Rename" class="btn btn-warning btn-sm swapChildrenClass hide" data-toggle="modal" data-target="#ReceiveModal"><i class="fa fa-plus"></i><b>&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.New&nbsp;</b></button>
                    <div id="div-option-buttons" class="btn-group hide">
                        <button id="btn-Copy" type="button" class="btn btn-sm btn-default"><i class="fa fa-copy"></i>&nbsp;Copy </button>
                        <button id="btn-Print" type="button" class="btn btn-sm btn-default"><i class="fa fa-print"></i>&nbsp;Print </button>
                        <button id="btn-Send" type="button" class="btn btn-sm btn-default"><i class="fa fa-envelope-o"></i>&nbsp;Send </button>
                    </div>
                </div>
                <div id="div-search-option" class="col-sm-7">
                    <div id="div-search-controls" class="input-group col-sm-9">
                        <input id="txt-Search" autocomplete="off" onfocus="DisableEnterKey(id);" onkeypress="DisableEnterKey(id);" style="text-transform:uppercase" type="text" class="input-sm form-control" binding-name="SearchPlaceHolder" binding-prop="placeholder" placeholder="">
                        <span class="input-group-btn">
                            <button id="btn-search" class="btn btn-sm btn-primary" type="button" onclick="VehicleService_LoadWithPagingWithWhereClauseAndOrderByWithObjectArrayReturned();"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                    <div class="float-right col-sm-1">
                        <button id="btn-Delete-Rename" type="button" class="float-right btn btn-sm btn-danger m-r-n swapChildrenClass hide"><i class="fa fa-trash-o"></i><b>&nbsp;@Forwarding.MvcApp.App_Resources.App_Resources.Delete&nbsp;</b></button>
                    </div>
                </div>
            </div>
            <!--Region the searh, delete, addnew-->
            <!--Region: table header-->
                @*<div class="table-responsive" style="width:100%; height:300px; overflow:scroll;">*@
                <div class="table-responsive" style="">
                    <table id="tblReceiveDetails" class="table table-striped b-t b-light text-sm  table-hover ">
                        <thead>
                            <tr>
                                <th id="HeaderDeleteReceiveDetailsID" style="width:5%;">
                                    <input id="cb-CheckAll-ReceiveDetails" type="checkbox" />
                                </th>
                                <th class="hide">Barcode</th>
                                <th>Item</th>@*<th>Prod.Code</th>*@
                                <th class="hide">Product Name</th>
                                <th class="hide classShowForGBL">Engine</th>
                                <th class="hide classShowForGBL">Chassis</th>
                                <th class="hide classShowForGBL">OCN</th>
                                <th class="hide classShowForGBL">Model</th>
                                <th class="hide">@Forwarding.MvcApp.App_Resources.App_Resources.Qty</th>
                                @*<th>Split.Qty</th>*@
                                <th class="hide">Qty.Unit</th>
                                <th class="hide">@Forwarding.MvcApp.App_Resources.App_Resources.Location</th>
                                <th>Operation</th>
                                <th class="hide">PalletID</th>
                                <th class="hide">Rec.Date</th>
                                <th class="hide">@Forwarding.MvcApp.App_Resources.App_Resources.Status</th>
                                <th class="rounded-right hide"></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            <!--Region: table header-->
            <!--Region: footer-->
            <footer class="panel-footer">
                <div class="row">
                    <div class="col-sm-4 hidden-xs">
                        <select id="select-page-size" class="input-sm form-control input-s-sm inline">
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                        </select>
                        <button id="btn-applypaging" class="btn btn-sm btn-default" type="button">
                            @Forwarding.MvcApp.App_Resources.App_Resources.Apply
                        </button>
                    </div>
                    <div id="div-Text-Total" class="col-sm-4 text-center">
                        <small class="text-muted inline m-t-sm m-b-sm">
                            @Forwarding.MvcApp.App_Resources.App_Resources.Showing
                            <span id="spn-first-page-row"></span>- <span id="spn-last-page-row"></span> @Forwarding.MvcApp.App_Resources.App_Resources.Of
                            <span id="spn-total-count"></span> @Forwarding.MvcApp.App_Resources.App_Resources.Items
                        </small>
                    </div>
                    <div id="div-Pager" class="col-sm-4 text-right text-center-xs float-right"></div>
                </div>
            </footer>
            <!--Region: footer-->
        </section>
    </div>
</div>

